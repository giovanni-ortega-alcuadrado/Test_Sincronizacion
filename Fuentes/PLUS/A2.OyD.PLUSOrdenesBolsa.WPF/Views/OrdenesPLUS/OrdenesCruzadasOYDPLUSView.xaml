                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDReceptor, Mode=TwoWay}" IsReadOnly="True" />
                                            <Telerik:GridViewDataColumn Width="Auto" Header="">
                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Controles:BuscadorGenericoListaButon
                                                            Agrupamiento=""
                                                            CampoBusqueda="IdReceptor"
                                                            EstadoItem="A"
                                                            Etiqueta="Receptor"
                                                            TipoItem="Receptores"
                                                            finalizoBusqueda="BuscadorGenericoListaButon_finalizoBusqueda" />
                                                    </DataTemplate>
                                                </Telerik:GridViewDataColumn.CellTemplate>
                                            </Telerik:GridViewDataColumn>
                                            <Telerik:GridViewDataColumn
                                                DataMemberBinding="{Binding Nombre, Mode=TwoWay}"
                                                Header="Receptor"
                                                IsReadOnly="True" />
                                            <Telerik:GridViewDataColumn Header="Lider">
                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding Lider, Mode=TwoWay}" />
                                                    </DataTemplate>
                                                </Telerik:GridViewDataColumn.CellTemplate>
                                            </Telerik:GridViewDataColumn>
                                            <Telerik:GridViewDataColumn Width="Auto" Header="Porcentaje">
                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <A2UTILGEN:A2NumericBox
                                                            AllowNull="False"
                                                            Maximum="100"
                                                            Minimum="0"
                                                            ShowButtons="False"
                                                            Value="{Binding Porcentaje, Mode=TwoWay}" />
                                                    </DataTemplate>
                                                </Telerik:GridViewDataColumn.CellTemplate>
                                            </Telerik:GridViewDataColumn>
                                            <Telerik:GridViewDataColumn Width="Auto">
                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Label VerticalAlignment="Center" Content="%" />
                                                    </DataTemplate>
                                                </Telerik:GridViewDataColumn.CellTemplate>
                                            </Telerik:GridViewDataColumn>
                                        </A2UTILGEN:A2GridView.Columns>
                                    </A2UTILGEN:A2GridView>
                                </StackPanel>
                            </TabItem>
                            <!--  Tab para mostrar los datos de LEO  -->
                            <TabItem x:Name="tabItemDatosLEO" Header="Datos del LEO">
                                <Grid
                                    x:Name="GridDatosLEO"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Label="Receptor toma">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                IsEnabled="False"
                                                IsReadOnly="True"
                                                Text="{Binding NombreReceptorToma, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                            <Controles:BuscadorGenericoListaButon
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                Agrupamiento=""
                                                CampoBusqueda="IdReceptorToma"
                                                EstadoItem="A"
                                                Etiqueta="Receptor toma"
                                                TipoItem="Receptores"
                                                finalizoBusqueda="BuscadorGenericoListaButon_finalizoBusqueda" />
                                        </Grid>
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=CanalRecepcion}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboCanalRecepcion"
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosOYDPlus[CANALLEO], Source={StaticResource VMOrdenes}}"
                                            SelectedValue="{Binding CanalRecepcion, Mode=TwoWay}"
                                            SelectedValuePath="Retorno" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=UsuarioOperador}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboUsuarioOperador"
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosOYDPlus[USUARIO_OPERADOR], Source={StaticResource VMOrdenes}}"
                                            SelectedValue="{Binding UsuarioOperador, Mode=TwoWay}"
                                            SelectedValuePath="Retorno" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=NroExtensionToma}"
                                        LabelPosition="Above">
                                        <TextBox
                                            x:Name="txtNroExtensionToma"
                                            GotFocus="SeleccionarFocoControl"
                                            Text="{Binding NroExtensionToma, Mode=TwoWay}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="4"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=MedioVerificable}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboMedioVerificable"
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosOYDPlus[MEDIOVERLEO], Source={StaticResource VMOrdenes}}"
                                            SelectedValue="{Binding MedioVerificable, Mode=TwoWay}"
                                            SelectedValuePath="Retorno" />
                                    </Telerik:DataFormDataField>
                                </Grid>
                            </TabItem>
                            <!--  Tab para mostrar las otras opciones de la orden  -->
                            <TabItem x:Name="tabOtros" Header="Otros">
                                <Grid
                                    x:Name="GridOtros"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=ProductoValores}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboProductoValores"
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosOYDPlus[PRODUCTO_VALORES], Source={StaticResource VMOrdenes}}"
                                            SelectedValue="{Binding ProductoValores, Mode=TwoWay}"
                                            SelectedValuePath="Retorno" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=CostosAdicionales}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2NumericBox
                                            x:Name="txtCostosAdicionales"
                                            AllowNull="False"
                                            GotFocus="SeleccionarFocoControl"
                                            Maximum="100000000000"
                                            Minimum="0"
                                            ShowButtons="False"
                                            Value="{Binding CostosAdicionales, Mode=TwoWay}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Label="Broken trader"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboBrokenTrader"
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosOYDPlus[BROKER_TRADE], Source={StaticResource VMOrdenes}}"
                                            SelectedValue="{Binding BrokenTrader, Mode=TwoWay}"
                                            SelectedValuePath="Retorno" />
                                    </Telerik:DataFormDataField>

                                    <Grid
                                        x:Name="GridControlesClienteADR"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Visibility="{Binding MostrarCamposADR, Source={StaticResource VMOrdenes}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="4"
                                            Margin="10,10,0,0"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                x:Name="lblTituloCaracteristicasClienteADR"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Top"
                                                Style="{StaticResource Title5}"
                                                Text="Cliente ADR" />

                                            <StackPanel Orientation="Horizontal">
                                                <Controles:BuscadorCliente
                                                    x:Name="ctrlClienteADR"
                                                    Agrupamiento="todoslosreceptores"
                                                    BorrarCliente="{Binding BorrarClienteADR, Source={StaticResource VMOrdenes}}"
                                                    BuscarAlIniciar="False"
                                                    EstadoComitente="A"
                                                    TipoVinculacion="C"
                                                    comitenteAsignado="ctrlCliente_comitenteAsignadoADR" />
                                                <Button
                                                    x:Name="btnLimpiarClienteADR"
                                                    Margin="2,0,0,1"
                                                    VerticalAlignment="Bottom"
                                                    Click="btnLimpiarClienteADR_Click"
                                                    Style="{StaticResource btnLimpiar}"
                                                    ToolTipService.ToolTip="Limpiar cliente" />
                                            </StackPanel>
                                        </StackPanel>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Label="Código OyD"
                                            LabelPosition="Above">
                                            <Label x:Name="txtCodigoOYDADR" Content="{Binding IDComitenteADR}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Label="Nombre cliente"
                                            LabelPosition="Above">
                                            <Label x:Name="txtNombreClienteADR" Content="{Binding NombreClienteADR}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Label="Tipo identificación"
                                            LabelPosition="Above">
                                            <Label x:Name="txtTipoIdentificacionADR" Content="{Binding TipoIdentificacionADR}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="3"
                                            Label="Nro documento"
                                            LabelPosition="Above">
                                            <Label x:Name="txtIdentificacionADR" Content="{Binding NroDocumentoADR}" />
                                        </Telerik:DataFormDataField>
                                    </Grid>
                                </Grid>
                            </TabItem>

                            <!--  Tab para mostrar ordenes con las que se ha cruzado  -->
                            <TabItem x:Name="tabCruces" Header="Orden original">
                                <Grid
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    DataContext="{Binding OrdenesCruzadasSelected, Source={StaticResource VMOrdenes}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Label="Nro orden original"
                                        LabelPosition="Above">
                                        <Label Content="{Binding IDNroOrdenOriginal}" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        HorizontalAlignment="Left"
                                        Label="Receptor"
                                        LabelPosition="Above">
                                        <Label Content="{Binding NombreReceptorCruzada}" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        Label="Cantidad"
                                        LabelPosition="Above">
                                        <Label Content="{Binding ValorOrdenCruzada, StringFormat='\{0:N2\}'}" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        HorizontalAlignment="Right"
                                        Label="Pendiente por cruzar"
                                        LabelPosition="Above">
                                        <Label Content="{Binding TotalPendientePorCruzar, StringFormat='\{0:N2\}', Source={StaticResource VMOrdenes}}" />
                                    </Telerik:DataFormDataField>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </Border>

                    <Border
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,10,0,0"
                        Style="{StaticResource Contenedor_TabControl}">
                        <TabControl
                            x:Name="TabControlControles"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">

                            <TabItem x:Name="TabSaldoCliente" Header="{Binding TextoSaldoPortafolio, Source={StaticResource VMOrdenes}}">
                                <StackPanel
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Orientation="Vertical">
                                    <!--  Control para mostrar el saldo del cliente  -->
                                    <OYDPLUSControles:SaldoClienteView
                                        CodigoOYDSeleccionado="{Binding CodigoOYDControles, Source={StaticResource VMOrdenes}}"
                                        ConsultarSaldo="{Binding ConsultarSaldo, Source={StaticResource VMOrdenes}}"
                                        MostrarExpanderAbierto="True"
                                        Visibility="{Binding MostrarCamposCompra, Source={StaticResource VMOrdenes}}" />
                                    <!--  Control para mostrar el portafolio del cliente  -->
                                    <OYDPLUSControles:PortafolioClienteView
                                        CodigoOYDSeleccionado="{Binding CodigoOYDControles, Source={StaticResource VMOrdenes}}"
                                        ConsultarPortafolio="{Binding ConsultarPortafolio, Source={StaticResource VMOrdenes}}"
                                        EspecieSeleccionada="{Binding EspecieControles, Source={StaticResource VMOrdenes}}"
                                        PortafolioCliente="{Binding PortafolioClienteSelected, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                        PortafolioSeleccionada="{Binding PortafolioSeleccionada, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                        TipoNegocio="{Binding TipoNegocioControles, Source={StaticResource VMOrdenes}}"
                                        Visibility="{Binding MostrarCamposVenta, Source={StaticResource VMOrdenes}}" />
                                </StackPanel>
                            </TabItem>
                            <TabItem
                                x:Name="TabOperacionesXCumplir"
                                Header="Operaciones"
                                Visibility="{Binding MostrarCamposCuentaPropia, Source={StaticResource VMOrdenes}}">
                                <!--  Control para mostrar las operaciones pendientes por cumplir  -->
                                <OYDPLUSControles:OperacionesXCumplirView
                                    CodigoOYDSeleccionado="{Binding CodigoOYDControles, Source={StaticResource VMOrdenes}}"
                                    ConsultarOperaciones="{Binding ConsultarOperaciones, Source={StaticResource VMOrdenes}}"
                                    EspecieSeleccionada="{Binding EspecieControles, Source={StaticResource VMOrdenes}}"
                                    OperacionSeleccionada="{Binding OperacionSeleccionada, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    OperacionXCumplirSeleccionada="{Binding OperacionesXCumplirSelected, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    TipoNegocio="{Binding TipoNegocioControles, Source={StaticResource VMOrdenes}}"
                                    TipoOperacion="{Binding TipoOperacionControles, Source={StaticResource VMOrdenes}}" />
                            </TabItem>
                            <TabItem
                                x:Name="TabOrdenSAE"
                                Header="Bolsa"
                                Visibility="{Binding MostrarOrdenesSAE, Source={StaticResource VMOrdenes}}">
                                <!--  Control para mostrar las ordenes creadas en la bolsa cuando sea una orden directa  -->
                                <OYDPLUSControles:ObtenerOrdenSAEView
                                    ClaseOrden="{Binding Clase}"
                                    ConsultarOrdenes="{Binding ConsultarOrdenesSAE, Source={StaticResource VMOrdenes}}"
                                    ListaOrdenSAEAcciones="{Binding ListaOrdenSAEAcciones, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    ListaOrdenSAERentaFija="{Binding ListaOrdenSAERentaFija, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    OrdenSAEAccionesSeleccionada="{Binding OrdenSAEAccionesSelected, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    OrdenSAERentaFijaSeleccionada="{Binding OrdenSAERentaFijaSelected, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    OrdenSeleccionada="{Binding OrdenSAESeleccionada, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    ReceptorSeleccionado="{Binding Receptor}"
                                    TipoOperacion="{Binding TipoOperacion}" />
                            </TabItem>
                        </TabControl>
                    </Border>
                </Grid>
            </Telerik:RadBusyIndicator>
        </ScrollViewer>
    </StackPanel>
</Window>
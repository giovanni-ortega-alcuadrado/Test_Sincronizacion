<Window
    x:Class="OrdenesCruzadasOYDPLUSView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:Controles="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:OYDPLUSControles="clr-namespace:A2OYDPLUSUtilidades;assembly=A2.OyD.PLUSUtilidades.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDPLUSOrdenesBolsa"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    Title="Ordenes cruzadas"
    SizeToContent="WidthAndHeight"
    WindowStyle="ToolWindow">
    <Window.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:InVisibilityConverter x:Key="InVisibilityConverter" />
        <src:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
        <src:StringConverter x:Key="StringConverter" />
        <src:clsLiderConverter x:Key="cvLider" />
        <src:LongConverter x:Key="cvCodigo" />
        <src:DateTimeHoraFinDiaConverter x:Key="cvDateTimeHoraFinDiaConverter" />
        <src:TextoVacioVisibilityConverter x:Key="TextoVacioVisibilityConverter" />
        <src:BooleanInvertidoConverter x:Key="BooleanInvertidoConverter" />
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                x:Name="btnGuardar"
                Click="btnGuardar_Click_1"
                Content="Guardar" />
            <Button
                x:Name="btnCancelar"
                Click="btnCancelar_Click_1"
                Content="Cancelar" />
        </StackPanel>
        <ScrollViewer
            x:Name="scrollPrinicipal"
            MaxHeight="550"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Telerik:RadBusyIndicator
                x:Name="myBusyIndicator"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BusyContent="Cargando..."
                DisplayAfter="0"
                IsBusy="{Binding IsBusyCruzada}">
                <Grid
                    x:Name="LayoutRoot"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Stretch"
                    DataContext="{Binding OrdenCruzadaSelected}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="0"
                            Label="Orden original nro.">
                            <TextBlock
                                x:Name="txtNroOrden"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding IDNroOrdenOriginal}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="1"
                            Label="Bolsa">
                            <TextBlock
                                x:Name="cboBolsa"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding NombreBolsa}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="2"
                            Label="Usuario">
                            <TextBlock
                                x:Name="linkUsuario"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding Usuario}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="3"
                            Label="Receptor">
                            <TextBlock
                                x:Name="txtReceptor"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding NombreReceptor}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="4"
                            Label="Tipo orden">
                            <TextBlock
                                x:Name="txtTipoOrden"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding NombreTipoOrden}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="5"
                            Label="Tipo negocio">
                            <TextBlock
                                x:Name="txtTipoNegocio"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding NombreTipoNegocio}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="6"
                            Label="Tipo operación">
                            <TextBlock
                                x:Name="txtTipoOperacion"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding NombreTipoOperacion}" />
                        </Telerik:DataFormDataField>
                        <TextBlock
                            x:Name="lblTituloCaracteristicasEspecie"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="7"
                            Margin="5,0,0,0"
                            VerticalAlignment="Top"
                            Style="{StaticResource Title5}"
                            Text="Características de la especie" />
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="0"
                            Label="Nemotécnico"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="txtNemotecnico"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding Especie}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="1"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=ISIN}"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="txtISIN"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding ISIN}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="2"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=FechaEmision}"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="dtpEmision"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding FechaEmision, StringFormat='dd/MM/yyyy', ConverterCulture=es-CO}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="3"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=FechaVencimiento}"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="dtpVencimiento"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding FechaVencimiento, StringFormat='dd/MM/yyyy', ConverterCulture=es-CO}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="4"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=TasaFacial}"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="txtTasa"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding TasaFacial, StringFormat='\{0:n\}'}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="5"
                            Label="Modalidad"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="cboModalidad"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding NombreModalidad}" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="6"
                            IsReadOnly="True"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Indicador}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboIndicador"
                                DisplayMemberPath="Descripcion"
                                IsEnabled="False"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[INDICADOR], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding Indicador, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="2"
                            Grid.Column="7"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=PuntosIndicador}"
                            LabelPosition="Above">
                            <TextBlock
                                x:Name="txtPuntosIndicador"
                                Style="{StaticResource ControlTextBlockNormalInfo}"
                                Text="{Binding PuntosIndicador, StringFormat='\{0:n\}'}" />
                        </Telerik:DataFormDataField>
                    </Grid>
                    <!--  Controles iniciales de la pantalla de ordenes  -->
                    <Grid
                        x:Name="GridControlesIniciales"
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="0"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=TipoProducto}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboTipoProducto"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOPRODUCTO], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding TipoProducto, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="1"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Clasificacion}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboClasificacion"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[CLASIFICACION], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding Clasificacion, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="2"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Mercado}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboMercado"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[MERCADO], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding Mercado, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="3"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=TipoLimite}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboTipoLimite"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOLIMITE], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding TipoLimite, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="4"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=CondicionesNegociacion}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboCondicionesNegociacion"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[CONDICNEGOCIACION], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding CondicionesNegociacion, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="0"
                            Grid.Column="5"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=FormaPago}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboFormaPago"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[FORMAPAGO], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding FormaPago, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="0"
                            IsEnabled="False"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=TipoInversion}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboTipoInversion"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOINVERSION], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding TipoInversion, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="1"
                            IsEnabled="False"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Ejecucion}"
                            LabelPosition="Above">
                            <ComboBox
                                x:Name="cboEjecucion"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[EJECUCION], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding Ejecucion, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="2"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Entidad}"
                            LabelPosition="Above"
                            Visibility="{Binding MostrarNegocio, Source={StaticResource VMOrdenes}}">
                            <ComboBox
                                x:Name="cboEntidad"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[ENTIDAD], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding Entidad, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="3"
                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Estrategia}"
                            LabelPosition="Above"
                            Visibility="{Binding MostrarNegocio, Source={StaticResource VMOrdenes}}">
                            <ComboBox
                                x:Name="cboEstrategia"
                                DisplayMemberPath="Descripcion"
                                ItemsSource="{Binding DiccionarioCombosOYDPlus[ESTRATEGIA], Source={StaticResource VMOrdenes}}"
                                SelectedValue="{Binding Estrategia, Mode=TwoWay}"
                                SelectedValuePath="Retorno" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="4"
                            IsEnabled="False"
                            Label="Duración"
                            LabelPosition="Above">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>
                                <ComboBox
                                    x:Name="cboDuracion"
                                    Grid.Column="0"
                                    DisplayMemberPath="Descripcion"
                                    IsEnabled="False"
                                    ItemsSource="{Binding DiccionarioCombosOYDPlus[DURACION], Source={StaticResource VMOrdenes}}"
                                    SelectedValue="{Binding Duracion, Mode=TwoWay}"
                                    SelectedValuePath="Retorno" />
                                <Label
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Right"
                                    Content="{Binding Dias, StringFormat='\{0\} día(s)', TargetNullValue='0 día(s)'}"
                                    Style="{StaticResource EstiloLabelNegro}" />
                            </Grid>
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="5"
                            IsEnabled="{Binding HabilitarFechaVigencia, Source={StaticResource VMOrdenes}}"
                            LabelPosition="Above">
                            <A2UTILGEN:A2DatePicker
                                x:Name="dtpVigenciaHasta"
                                SelectedDate="{Binding FechaVigencia, Mode=TwoWay, Converter={StaticResource cvDateTimeHoraFinDiaConverter}}"
                                ToolTipService.ToolTip="Fecha hasta la cual está vigente la orden" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Row="1"
                            Grid.Column="6"
                            IsEnabled="{Binding HabilitarHoraVigencia, Source={StaticResource VMOrdenes}}"
                            Label="Hora"
                            LabelPosition="Above">
                            <A2UTILGEN:A2TimePicker SelectedValue="{Binding FechaVigencia, Mode=TwoWay}" ToolTipService.ToolTip="Hora de vigencia de la orden" />
                        </Telerik:DataFormDataField>
                    </Grid>
                    <Grid
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="lblTituloCaracteristicasCliente"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="15,0,0,0"
                            VerticalAlignment="Top"
                            Style="{StaticResource Title5}"
                            Text="Caracteristicas del cliente" />
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10,0,0,0"
                            Orientation="Horizontal">
                            <Label
                                Margin="0,0,10,0"
                                VerticalAlignment="Bottom"
                                Content="Buscar cliente"
                                Style="{StaticResource EstiloLabel}" />
                            <Controles:BuscadorCliente
                                x:Name="ctrlCliente"
                                BorrarCliente="{Binding BorrarClienteCruzada, Source={StaticResource VMOrdenes}}"
                                BuscarAlIniciar="False"
                                CargarClientesRestriccion="True"
                                CargarClientesTercero="Visible"
                                EstadoComitente="A"
                                IDReceptor="{Binding Receptor}"
                                IsEnabled="{Binding HabilitarClienteCruzada, Source={StaticResource VMOrdenes}}"
                                TipoNegocio="{Binding TipoNegocio}"
                                TipoProducto="{Binding TipoProducto}"
                                TipoVinculacion="C"
                                comitenteAsignado="ctrlCliente_comitenteAsignado" />
                            <Button
                                x:Name="btnLimpiarCliente"
                                Margin="2,0,0,1"
                                VerticalAlignment="Bottom"
                                Click="btnLimpiarCliente_Click"
                                IsEnabled="{Binding HabilitarClienteCruzada, Source={StaticResource VMOrdenes}}"
                                Style="{StaticResource btnLimpiar}"
                                ToolTipService.ToolTip="Limpiar cliente" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Telerik:DataFormDataField Grid.Column="0" LabelPosition="Above">
                                    <Label x:Name="txtCodigoOYD" Content="{Binding IDComitente}" />
                                </Telerik:DataFormDataField>
                                <Telerik:DataFormDataField Grid.Column="1" LabelPosition="Above">
                                    <Label x:Name="txtNombreCliente" Content="{Binding NombreCliente}" />
                                </Telerik:DataFormDataField>
                                <Telerik:DataFormDataField Grid.Column="2" LabelPosition="Above">
                                    <Label x:Name="txtIdentificacion" Content="{Binding NroDocumento}" />
                                </Telerik:DataFormDataField>
                                <Telerik:DataFormDataField Grid.Column="3" LabelPosition="Above">
                                    <Label x:Name="txtTipoCliente" Content="{Binding CategoriaCliente}" />
                                </Telerik:DataFormDataField>
                            </Grid>
                        </StackPanel>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Telerik:DataFormDataField
                                Grid.Column="0"
                                IsEnabled="{Binding HabilitarClienteCruzada, Source={StaticResource VMOrdenes}}"
                                Label="Ordenante"
                                LabelPosition="Above">
                                <ComboBox
                                    x:Name="cboOrdenantes"
                                    ItemsSource="{Binding ListaOrdenantesCruzada, Source={StaticResource VMOrdenes}, Mode=OneWay}"
                                    SelectedItem="{Binding OrdenanteSeleccionadoCruzada, Source={StaticResource VMOrdenes}, Mode=TwoWay}"
                                    SelectedValuePath="IdOrdenante">
                                    <ComboBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel
                                                Height="Auto"
                                                Orientation="Vertical"
                                                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto" />
                                        </ItemsPanelTemplate>
                                    </ComboBox.ItemsPanel>
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Height="Auto"
                                                Margin="0"
                                                HorizontalAlignment="Left">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Style="{StaticResource ControlTextBlockNormalInfo}"
                                                        Text="{Binding Path=DescripcionOrdenante}"
                                                        Visibility="{Binding Path=DescripcionOrdenante, Converter={StaticResource TextoVacioVisibilityConverter}}" />
                                                    <TextBlock Style="{StaticResource ControlTextBlockNormalInfo}" Text=" - " />
                                                    <TextBlock
                                                        Style="{StaticResource ControlTextBlockNormalInfo}"
                                                        Text="{Binding Path=Lider, Converter={StaticResource cvLider}}"
                                                        Visibility="{Binding Path=Lider, Converter={StaticResource TextoVacioVisibilityConverter}}" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Style="{StaticResource ControlTextBlockNormalInfo}"
                                                        Text="{Binding Path=TipoIdentificacion}"
                                                        Visibility="{Binding Path=TipoIdentificacion, Converter={StaticResource TextoVacioVisibilityConverter}}" />
                                                    <TextBlock
                                                        Style="{StaticResource ControlTextBlockNormalInfo}"
                                                        Text="{Binding Path=NroDocumento, StringFormat=' nro. \{0}'}"
                                                        Visibility="{Binding Path=NroDocumento, Converter={StaticResource TextoVacioVisibilityConverter}}" />
                                                </StackPanel>
                                                <Line
                                                    Height="1"
                                                    Margin="0"
                                                    Stretch="Fill"
                                                    Stroke="Silver"
                                                    X1="0"
                                                    X2="100"
                                                    Y1="20"
                                                    Y2="20" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                    <ToolTipService.ToolTip>
                                        <ToolTip>
                                            <StackPanel DataContext="{Binding OrdenanteSeleccionadoCruzada, Source={StaticResource VMOrdenes}}" Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="{Binding Path=TipoIdentificacion}" />
                                                    <Label Content="{Binding Path=NroDocumento, StringFormat=' nro. \{0}'}" />
                                                </StackPanel>
                                                <Label Content="{Binding Path=IdOrdenante, StringFormat='Código OYD \{0}'}" />
                                            </StackPanel>
                                        </ToolTip>
                                    </ToolTipService.ToolTip>
                                </ComboBox>
                            </Telerik:DataFormDataField>
                            <Telerik:DataFormDataField
                                Grid.Column="1"
                                IsEnabled="{Binding HabilitarClienteCruzada, Source={StaticResource VMOrdenes}}"
                                Label="Cuenta depósito"
                                LabelPosition="Above">
                                <ComboBox
                                    ItemsSource="{Binding ListaCuentasDepositoCruzada, Source={StaticResource VMOrdenes}, Mode=OneWay}"
                                    SelectedItem="{Binding CtaDepositoSeleccionadaCruzada, Source={StaticResource VMOrdenes}, Mode=TwoWay}"

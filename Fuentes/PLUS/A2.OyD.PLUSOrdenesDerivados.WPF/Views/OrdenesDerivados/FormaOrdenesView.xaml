                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="0"
                    IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[intIdCuentaCRCC], Source={StaticResource VMOrdenes}}"
                    Label="Cuenta CRCC"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboCuentaCRCC"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboCuentasCCCR, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding IDCuenta, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="1"
                    IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[intIdSubcuentaCRCC], Source={StaticResource VMOrdenes}}"
                    Label="Subcuenta CRCC"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboSubCuentaCRCC"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboSubCuentasCCCR, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding IDSubCuenta, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="2"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Operación"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboTipoOperacion"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOOPERACION], Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding TipoOperacion, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="3"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Tipo instrumento"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboTipoInstrumento"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOINSTRUMENTO], Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding TipoInstruccion, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="4"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Tipo"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboTipoOpcion"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboTipoOpcion, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding TipoRegularOSpread, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="5"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Instrumento"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboInstrumento"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboInstrumento, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding Instrumento, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="6"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Vencimiento inicial"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboVencimientoInicial"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboVenimientoInicial, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding VencimientoInicial, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="1"
                    Grid.Column="7"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Vencimiento final"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboVencimientoFinal"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboVenimientoFinal, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding VencimientoFinal, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="8,3,10,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <Label Content="Precio" Style="{StaticResource EstiloLabel}" />
                    <A2UTILGEN:A2NumericBox
                        x:Name="txtPrecio"
                        FuncionalidadAutocomplete="True"
                        GotFocus="SeleccionarFocoControl"
                        IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[numPrecio], Source={StaticResource VMOrdenes}}"
                        Maximum="99999999"
                        Minimum="0"
                        NumberDecimalDigits="3"
                        ShowButtons="False"
                        ValueFormat="Numeric"
                        Value="{Binding Precio, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="8,3,10,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <Label Content="Cantidad contratos" Style="{StaticResource EstiloLabel}" />
                    <A2UTILGEN:A2NumericBox
                        x:Name="txtCantidad"
                        FuncionalidadAutocomplete="True"
                        GotFocus="SeleccionarFocoControl"
                        IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[numCantidad], Source={StaticResource VMOrdenes}}"
                        Maximum="9999999"
                        Minimum="0"
                        NumberDecimalDigits="0"
                        ShowButtons="False"
                        ValueFormat="Numeric"
                        Value="{Binding Cantidad, Mode=TwoWay}" />
                </StackPanel>


                <Telerik:DataFormDataField
                    Grid.Row="2"
                    Grid.Column="2"
                    IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[numComision], Source={StaticResource VMOrdenes}}"
                    Label="Comisión por"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboTipoComision"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOCOMISION], Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding TipoComision, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="8,3,10,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <Label Content="Comisión" Style="{StaticResource EstiloLabel}" />
                    <A2UTILGEN:A2NumericBox
                        x:Name="txtComosion"
                        FuncionalidadAutocomplete="True"
                        GotFocus="SeleccionarFocoControl"
                        IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[numComision], Source={StaticResource VMOrdenes}}"
                        Maximum="99999999999"
                        Minimum="0"
                        NumberDecimalDigits="0"
                        ShowButtons="False"
                        ValueFormat="Numeric"
                        Visibility="{Binding MostrarComision, Source={StaticResource VMOrdenes}, Converter={StaticResource VisibilityConverter}}"
                        Value="{Binding Comision, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="8,3,10,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <Label Content="Comisión" Style="{StaticResource EstiloLabel}" />
                    <A2UTILGEN:A2NumericBox
                        x:Name="txtPorcentajeComosion"
                        FuncionalidadAutocomplete="True"
                        GotFocus="SeleccionarFocoControl"
                        IsEnabled="{Binding DiccionarioEdicionCamposOYDPLUS[numComision], Source={StaticResource VMOrdenes}}"
                        Maximum="100"
                        Minimum="0"
                        NumberDecimalDigits="3"
                        ShowButtons="False"
                        ValueFormat="Numeric"
                        Visibility="{Binding MostrarComision, Source={StaticResource VMOrdenes}, Converter={StaticResource InVisibilityConverter}}"
                        Value="{Binding PorcentajeComision, Mode=TwoWay}" />
                </StackPanel>

                <!--    -->

                <Telerik:DataFormDataField
                    Grid.Row="2"
                    Grid.Column="4"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Facturar comisión"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboFacturarComision"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding DiccionarioCombosOYDPlus[FACTURARCOMISION], Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding FacturarComision, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="2"
                    Grid.Column="5"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Ya registrado en bolsa"
                    LabelPosition="Above">
                    <CheckBox IsChecked="{Binding RegistroEnBolsa, Mode=TwoWay}" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="3"
                    Grid.Column="0"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Tipo registro"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboTipoRegistro"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding DiccionarioCombosOYDPlus[TIPOREGISTRO], Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding TipoRegistro, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="3"
                    Grid.Column="1"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Contraparte"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboContraparte"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboContraparte, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding Contraparte, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="3"
                    Grid.Column="2"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Canal"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboCanal"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboCanalesActivos, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding Canal, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="3"
                    Grid.Column="3"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Medio verificable"
                    LabelPosition="Above">
                    <ComboBox
                        x:Name="cboMedioVerificable"
                        DisplayMemberPath="Descripcion"
                        ItemsSource="{Binding ListaComboMedioVerificable, Source={StaticResource VMOrdenes}}"
                        SelectedValue="{Binding MedioVerificable, Mode=TwoWay}"
                        SelectedValuePath="ID" />
                </Telerik:DataFormDataField>

                <Telerik:DataFormDataField
                    Grid.Row="3"
                    Grid.Column="4"
                    IsEnabled="{Binding HabilitarNegocio, Source={StaticResource VMOrdenes}}"
                    Label="Hora toma"
                    LabelPosition="Above">
                    <A2UTILGEN:A2TimePicker
                        x:Name="txtFechaHoraToma"
                        SelectedValue="{Binding FechaHoraToma, Mode=TwoWay}"
                        ToolTipService.ToolTip="Hora toma" />
                </Telerik:DataFormDataField>

                <StackPanel
                    Grid.Row="3"
                    Grid.Column="5"
                    Grid.ColumnSpan="2"
                    Margin="8,3,10,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    <Label Content="Detalle medio verificable" Style="{StaticResource EstiloLabel}" />
                    <TextBox

                                                        <CheckBox IsChecked="{Binding DividendoCompra, Mode=TwoWay}" IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        VerticalAlignment="Top"
                                                        Label="Dividendo"
                                                        LabelPosition="Above">
                                                        <CheckBox IsChecked="{Binding EnPesos, Mode=TwoWay}" IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Cantidad"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            LostFocus="Cantidad_LostFocus"
                                                            Maximum="999999999998"
                                                            Minimum="-999999999998"
                                                            NumberDecimalDigits="2"
                                                            ShowButtons="False"
                                                            ValueFormat="Numeric"
                                                            Value="{Binding Cantidad, Mode=TwoWay}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="2"
                                                        VerticalAlignment="Top"
                                                        Label="Saldo"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            IsEnabled="False"
                                                            Maximum="999999999998"
                                                            Minimum="-999999999998"
                                                            NumberDecimalDigits="0"
                                                            ShowButtons="False"
                                                            ValueFormat="Numeric"
                                                            Value="{Binding DataContext.SaldoOrden, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Precio Inferior"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            LostFocus="PrecioInferior_LostFocus"
                                                            Maximum="999999999998"
                                                            Minimum="0"
                                                            NumberDecimalDigits="3"
                                                            ShowButtons="False"
                                                            ValueFormat="Numeric"
                                                            Value="{Binding PrecioInferior, Mode=TwoWay}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="2"
                                                        VerticalAlignment="Top"
                                                        Label="Precio"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            LostFocus="Precio_LostFocus"
                                                            Maximum="999999999998"
                                                            Minimum="0"
                                                            NumberDecimalDigits="3"
                                                            ShowButtons="False"
                                                            ValueFormat="Numeric"
                                                            Value="{Binding Precio, Mode=TwoWay}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="3"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Cumplimiento"
                                                        LabelPosition="Above">

                                                        <A2UTILGEN:A2DatePicker
                                                            DisplayDate="{Binding DataContext.FechaActual, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            DropDownOpened="Cumplimiento_CalendarOpened"
                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            SelectedDate="{Binding FechaCumplimiento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            ToolTipService.ToolTip="Fechay hora de recepción de la orden" />
                                                    </Telerik:DataFormDataField>

                                                </Grid>
                                            </Border>

                                        </Grid>

                                        <Telerik:RadTabControl
                                            x:Name="tabOrdenes"
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="5"
                                            Width="895"
                                            Height="165"
                                            Margin="0"
                                            SelectedIndex="{Binding DataContext.TabSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                            TabStripPlacement="Right">

                                            <Telerik:RadTabItem x:Name="tbiGeneral" Header="General">
                                                <Border Style="{StaticResource Contenedor_TabControl}">
                                                    <TabControl
                                                        x:Name="tbiCaracteristicas"
                                                        Width="860"
                                                        Height="150"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        SelectedIndex="{Binding DataContext.TabSeleccionadoGeneral, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">

                                                        <TabItem Name="TabReceptoresOrden" Header="Receptores">
                                                            <StackPanel>
                                                                <A2:ControlMenuDetalleA2
                                                                    x:Name="cmReceptorOrdenesOF"
                                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    Mensaje="{Binding DataContext.MensajeMVVM, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                                    NombreDetalle="{Binding DataContext.NombreColeccionDetalle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                                                <A2UTILGEN:A2GridView
                                                                    x:Name="dgReceptoresOrden"
                                                                    Height="87"
                                                                    VerticalAlignment="Top"
                                                                    AutoGenerateColumns="False"
                                                                    IsHitTestVisible="True"
                                                                    IsReadOnly="{Binding DataContext.EditandoDetalle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    ItemsSource="{Binding DataContext.ListaReceptorOrdenesOF, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                                    SelectedItem="{Binding DataContext.ReceptorOrdenesOFSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                                    ValidatesOnDataErrors="None">
                                                                    <A2UTILGEN:A2GridView.Columns>
                                                                        <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDReceptor, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" IsReadOnly="True" />
                                                                        <Telerik:GridViewDataColumn Header="">
                                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                                <DataTemplate>
                                                                                    <OyD:BuscadorGenericoListaButon
                                                                                        Agrupamiento=""
                                                                                        CampoBusqueda="IdReceptor"
                                                                                        EstadoItem="A"
                                                                                        Etiqueta="Receptor"
                                                                                        GotFocus="BuscadorGenericoListaButon_GotFocus"
                                                                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                        TipoItem="Receptores"
                                                                                        finalizoBusqueda="BuscadorGenericoListaButon_finalizoBusqueda" />
                                                                                </DataTemplate>
                                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                                        </Telerik:GridViewDataColumn>
                                                                        <Telerik:GridViewDataColumn DataMemberBinding="{Binding Nombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" IsReadOnly="True" />
                                                                        <Telerik:GridViewDataColumn Header="Lider">
                                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                                <DataTemplate>
                                                                                    <CheckBox IsChecked="{Binding Lider, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                                                </DataTemplate>
                                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                                        </Telerik:GridViewDataColumn>

                                                                        <Telerik:GridViewDataColumn Header="Porcentaje">
                                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                                <DataTemplate>
                                                                                    <A2UTILGEN:A2NumericBox
                                                                                        HorizontalContentAlignment="Right"
                                                                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                        Maximum="100"
                                                                                        Minimum="0"
                                                                                        ShowButtons="False"
                                                                                        Value="{Binding Porcentaje, Mode=TwoWay, StringFormat=\{0:n0\}}" />
                                                                                </DataTemplate>
                                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                                        </Telerik:GridViewDataColumn>
                                                                    </A2UTILGEN:A2GridView.Columns>
                                                                </A2UTILGEN:A2GridView>

                                                            </StackPanel>
                                                        </TabItem>
                                                    </TabControl>
                                                </Border>
                                            </Telerik:RadTabItem>

                                            <Telerik:RadTabItem x:Name="tbiLiquidaciones" Header="Liquidaciones">
                                                <Telerik:RadBusyIndicator
                                                    x:Name="myBusyIndicatorLiquidaciones"
                                                    BusyContent="Cargando Liquidaciones Asociadas a la Orden"
                                                    DisplayAfter="0"
                                                    IsBusy="{Binding DataContext.IsBusyLiquidaciones, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">
                                                    <A2UTILGEN:A2GridView
                                                        x:Name="dgLiquidaciones"
                                                        Width="770"
                                                        Height="150"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        AutoGenerateColumns="False"
                                                        FrozenColumnCount="3"
                                                        IsReadOnly="True"
                                                        ItemsSource="{Binding DataContext.LiquidacionesOrdenOF, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                        ValidatesOnDataErrors="None">
                                                        <A2UTILGEN:A2GridView.Columns>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Estado}" Header="Estado" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding FechaLiq, StringFormat='MMM dd, yyyy'}" Header="Fecha Liq." />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding NroLiquidacion}" Header="Nro. liquidación" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Nemotecnico}" Header="Nemotécnico" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding NroFactura}" Header="Nro. factura" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Cantidad, StringFormat='N2'}" Header="Cantidad">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Cumplimiento, StringFormat='MMM dd, yyyy'}" Header="Cumplimiento" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Precio, StringFormat=c}" Header="Precio">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding ValorLiq, StringFormat=c}" Header="Valor">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding TotalLiq, StringFormat=c}" Header="Total">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Comision, StringFormat='N2'}" Header="Comisión">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Retencion, StringFormat='N2'}" Header="Retención">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding Intereses, StringFormat='N2'}" Header="Intereses">
                                                                <Telerik:GridViewDataColumn.CellStyle>
                                                                    <Style TargetType="Telerik:GridViewCell">
                                                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                                                    </Style>
                                                                </Telerik:GridViewDataColumn.CellStyle>
                                                            </Telerik:GridViewDataColumn>
                                                        </A2UTILGEN:A2GridView.Columns>
                                                    </A2UTILGEN:A2GridView>
                                                </Telerik:RadBusyIndicator>
                                            </Telerik:RadTabItem>


                                        </Telerik:RadTabControl>


                                        <StackPanel
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="5"
                                            Orientation="Horizontal">


                                            <Telerik:DataFormDataField
                                                VerticalAlignment="Top"
                                                Label="Instrucciones"
                                                LabelPosition="Above">
                                                <TextBox
                                                    Width="430"
                                                    Height="Auto"
                                                    MaxHeight="35"
                                                    HorizontalAlignment="Left"
                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Text="{Binding Instrucciones, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    TextWrapping="Wrap"
                                                    ToolTipService.ToolTip="Instrucciones de la orden"
                                                    VerticalScrollBarVisibility="Auto" />
                                            </Telerik:DataFormDataField>


                                            <Telerik:DataFormDataField
                                                VerticalAlignment="Top"
                                                Label="Notas"
                                                LabelPosition="Above">
                                                <TextBox
                                                    Width="430"
                                                    Height="Auto"
                                                    MaxHeight="35"
                                                    HorizontalAlignment="Left"
                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Text="{Binding Notas, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    TextWrapping="Wrap"
                                                    ToolTipService.ToolTip="Observaciones a la orden"
                                                    VerticalScrollBarVisibility="Auto" />
                                            </Telerik:DataFormDataField>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Telerik:RadBusyIndicator>
</UserControl>

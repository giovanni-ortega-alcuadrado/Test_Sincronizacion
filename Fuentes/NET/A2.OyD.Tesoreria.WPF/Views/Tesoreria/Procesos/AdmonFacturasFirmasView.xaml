<UserControl
    x:Class="AdmonFacturasFirmasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Controles="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:c2="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:my1="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDTesoreria"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit">

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:StringConverter x:Key="StringConverter" />

        <!--<src:A2UtilsViewModel x:Key="A2VM"/>-->
    </UserControl.Resources>

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid
            x:Name="LayoutRoot"
            HorizontalAlignment="Stretch"
            ShowGridLines="False">
            <Grid.Resources />

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <!--  Fila del menu  -->
                <RowDefinition Height="auto" />
                <!--  Fila de la forma/grid  -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource stpFiltro}">
                <!--  Editando="{Binding Editando, Mode= TwoWay}"  -->
                <A2utils:ControlMenuA2
                    x:Name="cm"
                    DF="{Binding df}"
                    DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                    DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                    EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                    EventoCancelarGrabacion="CancelarEditarRegistro_Click"
                    EventoConfirmarGrabacion="cm_EventoConfirmarGrabacion"
                    Filtro="{Binding FiltroVM, Mode=TwoWay}"
                    IsItemValid="True"
                    ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                    ManejaMakerAndChecker="{Binding visibleap}"
                    Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                    MensajeError="{Binding ErrorForma}"
                    Modo="{Binding ModoMVVM, Mode=TwoWay}"
                    ObjetoSeleccionado="{Binding Selected}"
                    RegistroConVersion="{Binding visible}"
                    TextoVersion="{Binding content}"
                    TituloVista="Administración de Facturas a Firmas Contraparte"
                    TituloVistaAdicional="registros"
                    TituloVista_CambioSelected="{Binding TesoreriSelected.HasChanges}"
                    TituloVista_CantidadRegistros="{Binding ListaAdmonFacturasFirmas.Count}" />

                <TextBlock
                    Height="Auto"
                    Margin="3"
                    Foreground="Red"
                    Text="{Binding ErrorForma}"
                    Visibility="{Binding VisibilidadErrores}" />
            </StackPanel>
            <Grid
                x:Name="grdGridForma"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Stretch">


                <Border HorizontalAlignment="Center" CornerRadius="5">
                    <StackPanel
                        x:Name="Buscar"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        VerticalAlignment="Top">

                        <Border Style="{StaticResource Contenedor_Paginador}">
                            <A2UTILGEN:A2DataPager
                                x:Name="datapager1"
                                PageSize="10"
                                Source="{Binding Items, ElementName=dg}" />
                        </Border>
                        <A2UTILGEN:A2GridView
                            x:Name="dg"
                            Height="Auto"
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding DataContext.ListaAdmonFacturasFirmas_Paged, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectedItem="{Binding Selected, Mode=TwoWay}"
                            ValidatesOnDataErrors="None">
                            <A2UTILGEN:A2GridView.Columns>
                                <Telerik:GridViewDataColumn Header="Número*" SortMemberPath="Número">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding lngID}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding dtmDocumento}" Header="Fecha Documento" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDComitente}" Header="Comitente" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strNombre}" Header="strNombre" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strTipoIdentificacion}" Header="Tipo Identificación" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strNroIdentificacion}" Header="Número Documento" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDireccion}" Header="Dirección" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strEstado}" Header="Estado" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngImpresiones}" Header="Impresiones" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding dtmEstado}" Header="Fecha Estado" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Total, StringFormat=C2}" Header="Total" />


                            </A2UTILGEN:A2GridView.Columns>
                        </A2UTILGEN:A2GridView>
                    </StackPanel>
                </Border>

                <Border
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    CornerRadius="5">
                    <Grid HorizontalAlignment="Stretch">
                        <!--  Dataform de búsqueda  -->
                        <A2UTILGEN:A2DataForm
                            x:Name="dfBuscar"
                            VerticalAlignment="Top"
                            AutoGenerateFields="False"
                            CommandButtonsVisibility="None"
                            CurrentItem="{Binding cb}"
                            Visibility="{Binding visBuscando}">

                            <A2UTILGEN:A2DataForm.EditTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource BordeAgrupar}">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">

                                                <Telerik:DataFormDataField
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Width="200"
                                                    Height="auto"
                                                    IsReadOnly="True"
                                                    Label="Número:">
                                                    <A2UTILGEN:A2NumericBox
                                                        Height="23"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Stretch"
                                                        HorizontalContentAlignment="Right"
                                                        FontSize="10"
                                                        Maximum="99999999999999"
                                                        Minimum="0"
                                                        NumberDecimalDigits="0"
                                                        ShowButtons="False"
                                                        ValueFormat="NoSeparator"
                                                        Value="{Binding lngID, Mode=TwoWay}" />
                                                </Telerik:DataFormDataField>

                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </A2UTILGEN:A2DataForm.EditTemplate>
                        </A2UTILGEN:A2DataForm>

                        <!--  Dataform edición de registro  -->
                        <!--<ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="2" Height="470" Width="Auto">-->

                        <StackPanel
                            Grid.Row="1"
                            VerticalAlignment="Top"
                            Style="{StaticResource stpFiltro}"
                            Visibility="{Binding visNavegando}">

                            <Border Style="{StaticResource ContenedorBotonesSecundario_Estilo}">
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button
                                        HorizontalAlignment="Left"
                                        Click="Button_Click_1"
                                        Content="Reportes Pendientes"
                                        IsEnabled="True" />
                                </StackPanel>
                            </Border>
                            <A2UTILGEN:A2DataForm
                                x:Name="df"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                AutoGenerateFields="False"
                                CommandButtonsVisibility="None"
                                CurrentItem="{Binding Selected}"
                                IsEnabled="{Binding Editando}">





                                <A2UTILGEN:A2DataForm.EditTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">

                                            <Border HorizontalAlignment="Stretch" Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Height="auto"
                                                        IsReadOnly="True"
                                                        Label="Doc:">
                                                        <ComboBox
                                                            Name="cboD"
                                                            Width="auto"
                                                            DisplayMemberPath="Descripcion"
                                                            ItemsSource="{Binding DiccionarioCombosA2[PrefijosFacturas], Source={StaticResource A2VM}}"
                                                            SelectedValue="{Binding strPrefijo}"
                                                            SelectedValuePath="ID" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Width="200"
                                                        Height="auto"
                                                        IsReadOnly="True"
                                                        Label="Número:">
                                                        <TextBox Text="{Binding lngID}" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="2"
                                                        Width="auto"
                                                        Height="20"
                                                        IsEnabled="False"
                                                        Label="Elaboración:">
                                                        <A2UTILGEN:A2DatePicker
                                                            Width="auto"
                                                            IsEnabled="False"
                                                            SelectedDate="{Binding dtmDocumento, Mode=TwoWay}" />
                                                    </Telerik:DataFormDataField>

                                                </Grid>
                                            </Border>
                                            <!--  TERMINA Documento, Número y Elaboración  -->

                                            <!--  Nombre, Tipo ID y Direccion, Numero y Telefono  -->
                                            <Border
                                                Grid.ColumnSpan="2"
                                                HorizontalAlignment="Stretch"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="300" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>


                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Stretch"
                                                        IsReadOnly="True"
                                                        Label="Nombre:">
                                                        <TextBox Text="{Binding strNombre}" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Stretch"
                                                        IsReadOnly="True"
                                                        Label="Tipo Id:">
                                                        <ComboBox
                                                            Name="cboTipoDocumento"
                                                            DisplayMemberPath="Descripcion"
                                                            ItemsSource="{Binding DiccionarioCombosA2[TIPOID], Source={StaticResource A2VM}}"
                                                            SelectedValue="{Binding ValorTipoIdentificacion, Mode=TwoWay}"
                                                            SelectedValuePath="ID" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Stretch"
                                                        IsReadOnly="True"
                                                        Label="Dirección:">
                                                        <TextBox Text="{Binding strDireccion}" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Stretch"
                                                        IsReadOnly="True"
                                                        Label="Número Doc:">
                                                        <TextBox Text="{Binding strNroIdentificacion}" TextAlignment="Right" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Stretch"
                                                        IsReadOnly="True"
                                                        Label="Teléfono:">
                                                        <TextBox Text="{Binding strTelefono}" TextAlignment="Right" />
                                                    </Telerik:DataFormDataField>




                                                </Grid>
                                            </Border>
                                            <!--  TERMINA Nombre, Tipo ID y Direccion, Numero y Telefono  -->

                                            <Border
                                                Grid.ColumnSpan="2"
                                                HorizontalAlignment="Stretch"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Stretch"
                                                        Orientation="Horizontal">
                                                        <Telerik:DataFormDataField
                                                            Width="250"
                                                            Height="auto"
                                                            HorizontalAlignment="Stretch"
                                                            IsReadOnly="True"
                                                            Label="Estado:">
                                                            <TextBox Text="{Binding strEstado}" />
                                                        </Telerik:DataFormDataField>

                                                    </StackPanel>
                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Right"
                                                        Orientation="Horizontal">
                                                        <Telerik:DataFormDataField
                                                            Height="auto"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="False"
                                                            Label="Fecha">
                                                            <A2UTILGEN:A2DatePicker Height="20" SelectedDate="{Binding dtmEstado}" />
                                                        </Telerik:DataFormDataField>
                                                    </StackPanel>

                                                </Grid>
                                            </Border>

                                            <Telerik:RadBusyIndicator
                                                x:Name="myBusyIndicatorDetalle"
                                                Grid.ColumnSpan="2"
                                                Margin="0,10,0,10"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                BusyContent="Cargando detalle..."
                                                DisplayAfter="0"
                                                IsBusy="{Binding DataContext.IsBusyDetalles, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                <StackPanel>
                                                    <Border HorizontalAlignment="Stretch" Style="{StaticResource BordeAgrupar}">
                                                        <StackPanel Orientation="Vertical">
                                                            <Border Style="{StaticResource Contenedor_Paginador}">
                                                                <A2UTILGEN:A2DataPager
                                                                    x:Name="dpDetalle"
                                                                    PageSize="10"
                                                                    Source="{Binding Items, ElementName=dgDetalle}" />
                                                            </Border>
                                                            <A2UTILGEN:A2GridView
                                                                x:Name="dgDetalle"
                                                                Height="Auto"
                                                                VerticalAlignment="Top"
                                                                AutoGenerateColumns="False"
                                                                IsReadOnly="True"
                                                                ItemsSource="{Binding DataContext.ListaAdmonFacturasFirmasDETALLE_Paged, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                                SelectedItem="{Binding SelectedDETALLE, Mode=TwoWay}"
                                                                ValidatesOnDataErrors="None">
                                                                <A2UTILGEN:A2GridView.Columns>
                                                                    <Telerik:GridViewDataColumn
                                                                        Width="auto"
                                                                        DataMemberBinding="{Binding strDescripcion}"
                                                                        Header="Descripción" />
                                                                    <Telerik:GridViewDataColumn
                                                                        Width="300"
                                                                        DataMemberBinding="{Binding curValorInicial, StringFormat=C2}"
                                                                        Header="Valor Factura"
                                                                        IsReadOnly="True">
                                                                        <Telerik:GridViewDataColumn.CellStyle>
                                                                            <Style TargetType="Telerik:GridViewCell">
                                                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                                                            </Style>
                                                                        </Telerik:GridViewDataColumn.CellStyle>
                                                                    </Telerik:GridViewDataColumn>
                                                                    <Telerik:GridViewDataColumn
                                                                        Width="*"
                                                                        Header="Valor Abonar"
                                                                        SortMemberPath="Valor Abonar">
                                                                        <Telerik:GridViewDataColumn.CellTemplate>
                                                                            <DataTemplate>
                                                                                <A2UTILGEN:A2NumericBox
                                                                                    Height="23"
                                                                                    HorizontalAlignment="Stretch"
                                                                                    VerticalAlignment="Stretch"
                                                                                    HorizontalContentAlignment="Right"
                                                                                    FontSize="10"
                                                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                                    Maximum="99999999999999"
                                                                                    Minimum="0"
                                                                                    NumberDecimalDigits="2"
                                                                                    ShowButtons="False"
                                                                                    ValueFormat="Numeric"
                                                                                    Value="{Binding curValorAbonar, Mode=TwoWay}" />
                                                                            </DataTemplate>
                                                                        </Telerik:GridViewDataColumn.CellTemplate>
                                                                    </Telerik:GridViewDataColumn>
                                                                </A2UTILGEN:A2GridView.Columns>
                                                            </A2UTILGEN:A2GridView>
                                                        </StackPanel>
                                                    </Border>

                                                    <Border
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Stretch"
                                                        Style="{StaticResource BordeAgrupar}">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Telerik:DataFormDataField
                                                                Width="250"
                                                                HorizontalAlignment="Stretch"
                                                                IsReadOnly="True"
                                                                Label="Retención:">
                                                                <TextBox Text="{Binding curRetencion, StringFormat=C2}" TextAlignment="Right" />
                                                            </Telerik:DataFormDataField>
                                                            <Telerik:DataFormDataField
                                                                Width="250"
                                                                HorizontalAlignment="Stretch"
                                                                IsReadOnly="True"
                                                                Label="Iva:">
                                                                <TextBox Text="{Binding curIva, StringFormat=C2}" TextAlignment="Right" />
                                                            </Telerik:DataFormDataField>
                                                        </StackPanel>
                                                    </Border>

                                                    <Border
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Stretch"
                                                        Style="{StaticResource BordeAgrupar}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="auto" />
                                                                <RowDefinition Height="auto" />
                                                                <RowDefinition Height="auto" />
                                                            </Grid.RowDefinitions>

                                                            <StackPanel
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                Grid.ColumnSpan="2"
                                                                HorizontalAlignment="Stretch"
                                                                Orientation="Horizontal">
                                                                <Telerik:DataFormDataField
                                                                    Width="250"
                                                                    Height="auto"
                                                                    HorizontalAlignment="Stretch"
                                                                    IsReadOnly="True"
                                                                    Label="Cliente de la operación:">
                                                                    <TextBox Text="{Binding lngIDComitente}" />
                                                                </Telerik:DataFormDataField>

                                                            </StackPanel>
                                                            <StackPanel
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Grid.ColumnSpan="2"
                                                                HorizontalAlignment="Right"
                                                                Orientation="Horizontal">
                                                                <Telerik:DataFormDataField
                                                                    Width="300"
                                                                    Height="auto"
                                                                    HorizontalAlignment="Stretch"
                                                                    IsReadOnly="True"
                                                                    Label="Saldo por Pagar Factura">
                                                                    <TextBox Text="{Binding Saldo, StringFormat=C2}" TextAlignment="Right" />
                                                                </Telerik:DataFormDataField>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>

                                                    <Border
                                                        Grid.ColumnSpan="2"
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Stretch"
                                                        Style="{StaticResource BordeAgrupar}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="350" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />
                                                                <RowDefinition />

                                                            </Grid.RowDefinitions>
                                                            <Telerik:DataFormDataField
                                                                Grid.Row="0"
                                                                Grid.Column="0"
                                                                Height="auto"
                                                                HorizontalAlignment="Stretch"
                                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Label="Tipo:">

                                                                <ComboBox
                                                                    x:Name="cmbNombreConsecutivo"
                                                                    DisplayMemberPath="Descripcion"
                                                                    ItemsSource="{Binding DiccionarioCombosEspecificos[Tesoreria_RecibosCaja_ConsecutivosTesoreriaRC], Source={StaticResource A2VM}}"
                                                                    SelectedValue="{Binding DataContext.NombreConsecutivo, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                                    SelectedValuePath="ID" />

                                                            </Telerik:DataFormDataField>
                                                            <Telerik:DataFormDataField
                                                                Grid.Row="1"
                                                                Grid.Column="0"
                                                                Height="auto"
                                                                HorizontalAlignment="Stretch"
                                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Label="Detalle:">
                                                                <TextBox Text="{Binding DataContext.strDetalle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                                            </Telerik:DataFormDataField>
                                                            <Telerik:DataFormDataField
                                                                Grid.Row="2"
                                                                Grid.Column="0"
                                                                Height="auto"
                                                                HorizontalAlignment="Stretch"
                                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Label="Banco Girador:">
                                                                <TextBox Text="{Binding DataContext.strBancoGirador, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                                            </Telerik:DataFormDataField>
                                                            <Telerik:DataFormDataField
                                                                Grid.Row="3"
                                                                Grid.Column="0"
                                                                Height="auto"
                                                                HorizontalAlignment="Stretch"
                                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Label="Cheque Nro:">
                                                                <A2UTILGEN:A2NumericBox
                                                                    Height="23"
                                                                    HorizontalAlignment="Stretch"
                                                                    VerticalAlignment="Center"
                                                                    HorizontalContentAlignment="Right"
                                                                    FontSize="10"
                                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    Maximum="99999999999999"
                                                                    Minimum="0"
                                                                    NumberDecimalDigits="0"
                                                                    ShowButtons="False"
                                                                    ValueFormat="NoSeparator"
                                                                    Value="{Binding DataContext.Nrocheque, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                                            </Telerik:DataFormDataField>
                                                            <Telerik:DataFormDataField
                                                                Grid.Row="4"
                                                                Grid.Column="0"
                                                                Height="auto"
                                                                HorizontalAlignment="Stretch"
                                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                Label="Forma Pago:">
                                                                <ComboBox
                                                                    Name="cboFormaPago"
                                                                    DisplayMemberPath="Descripcion"
                                                                    ItemsSource="{Binding DiccionarioCombosA2[FORMAPAGO], Source={StaticResource A2VM}}"
                                                                    SelectedValue="{Binding DataContext.strFormaPago, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                                    SelectedValuePath="ID" />
                                                            </Telerik:DataFormDataField>


                                                            <StackPanel
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Orientation="Horizontal">
                                                                <Telerik:DataFormDataField Label="Banco">
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBox Width="35" Text="{Binding DataContext.BancoConsignacion, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                                                        <TextBox Width="180" Text="{Binding DataContext.BancoConsignacionDescripcion, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                                                    </StackPanel>
                                                                </Telerik:DataFormDataField>
                                                                <my1:BuscadorGenericoListaButon
                                                                    HorizontalAlignment="Left"
                                                                    EstadoItem="A"
                                                                    Etiqueta=""
                                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    TipoItem="cuentasbancariasPLUS"

                                                    Height="155"
                                                    VerticalAlignment="Top"
                                                    AutoGenerateColumns="False"
                                                    CanUserDeleteRows="False"
                                                    CanUserInsertRows="False"
                                                    IsHitTestVisible="True"
                                                    IsReadOnly="{Binding DataContext.Read, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    ItemsSource="{Binding DetalleTesoreriaPaged}"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                    SelectedItem="{Binding DetalleTesoreriSelected, Mode=TwoWay}"
                                                    ValidatesOnDataErrors="None">
                                                    <A2UTILGEN:A2GridView.Columns>

                                                        <Telerik:GridViewDataColumn Header="Concepto" IsVisible="{Binding DataContext.MostrarConceptoFondosOYD, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanVisibilityConverter}}">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBox IsEnabled="False" Text="{Binding IDConcepto, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                        <Button
                                                                            Grid.Column="1"
                                                                            Margin="2,0,0,0"
                                                                            Click="Button_Click_BuscadorListaConceptos"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Style="{StaticResource btnBuscar}"
                                                                            Tag="{Binding IDDetalleTesoreria}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Código cliente">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <A2UTILGEN:A2TextBox
                                                                            Width="120"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            MaxLength="17"
                                                                            Text="{Binding IDComitente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                            TextAlignment="Right"
                                                                            TipoExpresion="SoloNumeros" />
                                                                        <my1:BuscadorClienteListaButon
                                                                            Margin="2,0,0,0"
                                                                            CampoBusqueda="IDComitente"
                                                                            EstadoComitente="A"
                                                                            ExcluirCodigosCompania="True"
                                                                            IDCompania="{Binding DataContext.TesoreriSelected.IDCompania, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            TipoVinculacion="C"
                                                                            finalizoBusqueda="Buscar_finalizoBusqueda" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Código Banco">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <A2UTILGEN:A2TextBox
                                                                            Width="50"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            LostFocus="txtBancoBusqueda_Lostfocus"
                                                                            MaxLength="7"
                                                                            Text="{Binding IDBanco, Mode=TwoWay}"
                                                                            TextAlignment="Right"
                                                                            TipoExpresion="SoloNumeros" />
                                                                        <my1:BuscadorGenericoListaButon
                                                                            Margin="2,0,0,0"
                                                                            Agrupamiento="BANCOSXCONSECUTIVO"
                                                                            CampoBusqueda="IDBanco"
                                                                            Condicion1="{Binding DataContext.TesoreriSelected.IDCompania, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Condicion2="{Binding DataContext.TesoreriSelected.NombreConsecutivo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            EstadoItem="A"
                                                                            Etiqueta="Lista de Bancos"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            TipoItem="CuentasBancarias"
                                                                            finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Nombre">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBox IsEnabled="False" Text="{Binding Nombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Concepto" IsVisible="{Binding DataContext.MostrarConcepto, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanVisibilityConverter}}">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBox IsEnabled="False" Text="{Binding IDConcepto, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                        <Button
                                                                            Grid.Column="1"
                                                                            Margin="2,0,0,0"
                                                                            Click="Button_Click_BuscadorListaConceptosGenerico"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Style="{StaticResource btnBuscar}"
                                                                            Tag="{Binding IDDetalleTesoreria}" />
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Detalle">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBox
                                                                        IsEnabled="{Binding DataContext.EditarColDetalle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        MaxLength="80"
                                                                        Text="{Binding Detalle, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Valor Débito">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <A2UTILGEN:A2NumericBox
                                                                            MinWidth="120"
                                                                            MaxWidth="140"
                                                                            GotFocus="ValorDebido_GotFocus"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Maximum="999999999999999"
                                                                            Minimum="0"
                                                                            NumberDecimalDigits="{Binding DataContext.CantidadDecimalesPantalla, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            ShowButtons="False"
                                                                            ValueChanged="ValorDebido_ValueChanged"
                                                                            ValueFormat="Numeric"
                                                                            Value="{Binding Debito, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Valor Crédito">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <A2UTILGEN:A2NumericBox
                                                                            MinWidth="120"
                                                                            MaxWidth="140"
                                                                            GotFocus="ValorCredito_GotFocus"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Maximum="999999999999999"
                                                                            Minimum="0"
                                                                            NumberDecimalDigits="{Binding DataContext.CantidadDecimalesPantalla, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            ShowButtons="False"
                                                                            ValueChanged="ValorCredito_ValueChanged"
                                                                            ValueFormat="Numeric"
                                                                            Value="{Binding Credito, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Cuenta contable">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBox
                                                                            Width="90"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            MaxLength="15"
                                                                            Text="{Binding IDCuentaContable, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                            TextAlignment="Right" />
                                                                        <my1:BuscadorGenericoListaButon
                                                                            Margin="2,0,0,0"
                                                                            CampoBusqueda="IDCuentaContable"
                                                                            Condicion1="{Binding DataContext.TesoreriSelected.IDCompania, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Etiqueta="Cuentas Contables"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            TipoItem="CuentasContables"
                                                                            finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="NIT">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBox
                                                                            Width="90"
                                                                            HorizontalAlignment="Right"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            MaxLength="15"
                                                                            Text="{Binding NIT, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                            TextAlignment="Right" />
                                                                        <my1:BuscadorGenericoListaButon
                                                                            Margin="2,0,0,0"
                                                                            CampoBusqueda="NITS"
                                                                            Condicion1="{Binding DataContext.TesoreriSelected.IDCompania, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Etiqueta="Lista Nits"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            TipoItem="NITS"
                                                                            finalizoBusqueda="BuscadorGenerico_finalizoBusquedaNITS" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Centro de costos">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <!--<Telerik:RadMaskedNumericInput Value="{Binding CentroCosto, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, Converter={StaticResource StringConverter}}"
                                                                                          Mask="000000000"   Width="90" IsEnabled="False"  />-->
                                                                        <TextBox
                                                                            Width="90"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            MaxLength="20"
                                                                            Text="{Binding CentroCosto, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                            TextAlignment="Right" />
                                                                        <my1:BuscadorGenericoListaButon
                                                                            Margin="2,0,0,0"
                                                                            CampoBusqueda="CentrosCosto"
                                                                            Condicion1="{Binding DataContext.TesoreriSelected.IDCompania, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            EstadoItem="A"
                                                                            Etiqueta="Centros de costo"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            TipoItem="CentrosCosto"
                                                                            finalizoBusqueda="BuscadorGenerico_finalizoBusquedaCCOSTO" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Estado Aprobación" IsVisible="{Binding DataContext.ColumnasVisibles, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanVisibilityConverter}}">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBox IsEnabled="False" Text="{Binding Por_Aprobar, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                        <Telerik:GridViewDataColumn Header="Descripción Aprobación" IsVisible="{Binding DataContext.ColumnasVisibles, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanVisibilityConverter}}">
                                                            <Telerik:GridViewDataColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <TextBox IsEnabled="False" Text="{Binding EstadoMC, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                </DataTemplate>
                                                            </Telerik:GridViewDataColumn.CellTemplate>
                                                        </Telerik:GridViewDataColumn>

                                                    </A2UTILGEN:A2GridView.Columns>
                                                </A2UTILGEN:A2GridView>

                                                <my1:ucBtnDialogoImportar
                                                    x:Name="btnSubirArchivoTesoreria"
                                                    Grid.Row="3"
                                                    HorizontalAlignment="Left"
                                                    CargarArchivo="btnSubirArchivoTesoreria_CargarArchivo"
                                                    DescripcionTextoBoton="Carga masiva de detalles"
                                                    Filtros="CSV (*.csv)|*.csv"
                                                    IsEnabled="{Binding EditandoRegistro}"
                                                    Proceso="ImpTesoreria" />
                                            </Grid>
                                        </Telerik:RadBusyIndicator>
                                    </TabItem>
                                </TabControl>
                            </Border>
                        </StackPanel>

                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Telerik:RadBusyIndicator>
</UserControl>







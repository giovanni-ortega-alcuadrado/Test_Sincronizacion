<UserControl
    x:Class="ComprobantesEgresoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:c2="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my1="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDTesoreria"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="1000"
    MaxWidth="1200">

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:StringConverter x:Key="StringConverter" />
        <!--<src:A2UtilsViewModel x:Key="A2VM"/>-->
        <src:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </UserControl.Resources>

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot" ShowGridLines="False">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" MinHeight="43" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Style="{StaticResource stpFiltro}">
                <A2utils:ControlMenuA2
                    x:Name="cm"
                    DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                    DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                    EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                    Filtro="{Binding FiltroVM, Mode=TwoWay}"
                    HayDataForm="False"
                    IsItemValid="True"
                    ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                    ManejaMakerAndChecker="{Binding visibleap}"
                    Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                    MensajeError="{Binding ErrorForma}"
                    Modo="{Binding ModoMVVM, Mode=TwoWay}"
                    ObjetoSeleccionado="{Binding TesoreriSelected}"
                    PreguntarConfirmacion="False"
                    RegistroConVersion="{Binding visible}"
                    TextoFiltroTooltip="Se filtra por los campos Tipo, Número, Cheque y A favor de"
                    TextoVersion="{Binding content}"
                    TituloVista="Comprobantes de Egreso"
                    TituloVistaAdicional="registros"
                    TituloVista_CambioSelected="{Binding TesoreriSelected.HasChanges}"
                    TituloVista_CantidadRegistros="{Binding ListaTesoreria.Count}"
                    VisibilidadRefrescarCombos="True" />
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource Contenedor_Estilo}">
                <Grid x:Name="grdGridForma" Grid.Row="1">

                    <Border>
                        <StackPanel
                            x:Name="Buscar"
                            Grid.Column="0"
                            Width="Auto"
                            Height="Auto"
                            VerticalAlignment="Top"
                            Visibility="{Binding DataContext.visLista, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                            <Border Style="{StaticResource Contenedor_Paginador}">
                                <A2UTILGEN:A2DataPager
                                    x:Name="datapager1"
                                    PageSize="10"
                                    Source="{Binding Items, ElementName=dg}" />
                            </Border>
                            <A2UTILGEN:A2GridView
                                x:Name="dg"
                                Height="Auto"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                IsReadOnly="True"
                                ItemsSource="{Binding ListaTesoreriaPaged}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectedItem="{Binding TesoreriSelected, Mode=TwoWay}"
                                ValidatesOnDataErrors="None">
                                <A2UTILGEN:A2GridView.Columns>

                                    <Telerik:GridViewDataColumn Header="Tipo" SortMemberPath="NombreConsecutivo">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding NombreConsecutivo}"
                                                    Style="{StaticResource HyperlinkLikeButton}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>


                                    <Telerik:GridViewDataColumn Header="Número" SortMemberPath="IDDocumento">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType={x:Type A2UTILGEN:A2GridView}}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding IDDocumento}"
                                                    Style="{StaticResource HyperlinkLikeButton}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn
                                        DataFormatString="MMM dd,yyyy"
                                        DataMemberBinding="{Binding Documento}"
                                        Header="Fecha" />
                                    <!--<Telerik:GridViewDataColumn  DataMemberBinding="{Binding  IDBanco}" Header="Id Banco" />-->
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding NombreBco}" Header="Banco" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding NumCheque}" Header="Cheque" />
                                    <Telerik:GridViewDataColumn Header="A favor de" SortMemberPath="Nombre">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType={x:Type A2UTILGEN:A2GridView}}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding Nombre}"
                                                    Style="{StaticResource HyperlinkLikeButton}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding TipoIdentificacion}" Header="Tipo Identificación" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding NroDocumento}" Header="Número Identificación" />
                                    <!--<Telerik:GridViewDataColumn  DataMemberBinding="{Binding  Estado}" Header="Estado" />-->
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding EstadoDocumento}" Header="Estado" />
                                    <Telerik:GridViewDataColumn
                                        DataFormatString="MMM dd,yyyy"
                                        DataMemberBinding="{Binding FecEstado}"
                                        Header="Fecha Estado" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding Impresiones}" Header="Impresiones" />

                                    <Telerik:GridViewDataColumn
                                        Header="Estado Aprobación"
                                        IsVisible="{Binding DataContext.ColumnasVisibles, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Converter={StaticResource BooleanVisibilityConverter}}"
                                        SortMemberPath="Por_Aprobar">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType={x:Type A2UTILGEN:A2GridView}}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding Por_Aprobar}"
                                                    Style="{StaticResource HyperlinkLikeButton}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding EstadoMC}"
                                        Header="Descripción Aprobación"
                                        IsVisible="{Binding DataContext.ColumnasVisibles, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Converter={StaticResource BooleanVisibilityConverter}}" />
                                </A2UTILGEN:A2GridView.Columns>
                            </A2UTILGEN:A2GridView>
                        </StackPanel>
                    </Border>


                    <Grid>
                        <!--  Dataform de búsqueda  -->
                        <Grid
                            x:Name="GridBusqueda"
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Background="White"
                            DataContext="{Binding CamposBusquedaTesoreria}"
                            KeyDown="Buscar_KeyDown"
                            Visibility="{Binding DataContext.visBuscando, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                            <StackPanel Orientation="Vertical">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30*" />
                                        <ColumnDefinition Width="20*" />
                                        <ColumnDefinition Width="20*" />
                                        <ColumnDefinition Width="20*" />
                                    </Grid.ColumnDefinitions>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Label="Cia"
                                        LabelPosition="Above">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20*" />
                                                <ColumnDefinition Width="80*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <A2UTILGEN:A2NumericBox
                                                Grid.Column="0"
                                                IsEnabled="False"
                                                Maximum="2147483647"
                                                Minimum="0"
                                                NumberDecimalDigits="0"
                                                ShowButtons="False"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding IDCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                            <TextBox
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                IsEnabled="False"
                                                MaxLength="50"
                                                Text="{Binding NombreCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="" />
                                            <my1:BuscadorGenericoListaButon
                                                Grid.Column="2"
                                                Margin="2,0,0,0"
                                                Agrupamiento="incluircompaniasclasestodasconfirma"
                                                CampoBusqueda="companiabusqueda"
                                                EstadoItem="A"
                                                Etiqueta="Compania"
                                                TipoItem="compania"
                                                ToolTipService.ToolTip="Buscador Compañías"
                                                finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />

                                        </Grid>
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Label="{Binding ConverterParameter=NombreConsecutivo, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="NombreConsecutivo"
                                            DisplayMemberPath="ID"
                                            ItemsSource="{Binding DataContext.listConsecutivosBusqueda, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                            SelectedValue="{Binding NombreConsecutivo, Mode=TwoWay}"
                                            SelectedValuePath="ID" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Label="{Binding ConverterParameter=IDDocumento, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2NumericBox
                                            x:Name="IDDocumento"
                                            Maximum="2147483647"
                                            ShowButtons="False"
                                            Value="{Binding IDDocumento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Label="{Binding ConverterParameter=Documento, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2DatePicker
                                            x:Name="DocumentoB"
                                            DisplayDate="{Binding DisplayDate, Mode=OneWay}"
                                            SelectedDate="{Binding Documento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Label="{Binding ConverterParameter=IDBanco, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20*" />
                                                <ColumnDefinition Width="80*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <A2UTILGEN:A2NumericBox
                                                x:Name="IDBanco"
                                                IsEnabled="False"
                                                Maximum="2147483647"
                                                Minimum="0"
                                                NumberDecimalDigits="0"
                                                ShowButtons="False"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding IDBanco, Mode=TwoWay}" />

                                            <TextBox
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                IsEnabled="False"
                                                Text="{Binding NombreBanco, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="NombreBco" />

                                            <my1:BuscadorGenericoListaButon
                                                Grid.Column="2"
                                                Margin="2,0,0,0"
                                                CampoBusqueda="BancoConsultar"
                                                EstadoItem="A"
                                                Etiqueta="Lista de Bancos"
                                                TipoItem="cuentasbancarias"
                                                finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                        </Grid>
                                    </Telerik:DataFormDataField>
                                </Grid>

                                <Label Content="Estado Maker and Checker" Visibility="{Binding DataContext.visibilidad, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" />


                                <StackPanel Visibility="{Binding DataContext.visibilidad, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="Aprobados"
                                            Content="Aprobados"
                                            GroupName="Busqueda"
                                            IsChecked="{Binding Aprobados, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="PorAprobar"
                                            Content="Por aprobar"
                                            GroupName="Busqueda"
                                            IsChecked="{Binding PorAprobar, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="NoAprobados"
                                            Content="No aprobados"
                                            GroupName="Busqueda"
                                            IsChecked="{Binding NoAprobados, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                </StackPanel>

                                <StackPanel Visibility="{Binding DataContext.visibilidadSubEstados, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="Ingreso"
                                            Content="Ingreso"
                                            GroupName="filtroBusqueda"
                                            IsChecked="{Binding Ingreso, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="Modificacion"
                                            Content="Modificacion"
                                            GroupName="filtroBusqueda"
                                            IsChecked="{Binding Modificacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="Retiro"
                                            Content="Retiro"
                                            GroupName="filtroBusqueda"
                                            IsChecked="{Binding Retiro, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                    <Telerik:DataFormDataField>
                                        <RadioButton
                                            x:Name="Todos"
                                            Content="Todos"
                                            GroupName="filtroBusqueda"
                                            IsChecked="{Binding Todos, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>
                                </StackPanel>
                            </StackPanel>

                        </Grid>


                        <!--  Dataform edición de registro  -->
                        <StackPanel
                            x:Name="Editar"
                            Grid.Row="1"
                            Grid.Column="1"
                            Height="Auto"
                            KeyDown="Edicion_KeyDown"
                            Visibility="{Binding visNavegando}">

                            <Border VerticalAlignment="Center">
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="btnDuplicar"
                                        Width="85"
                                        Margin="0,0,5,0"
                                        Click="btnDuplicar_Click"
                                        Content="Duplicar"
                                        IsEnabled="{Binding ActivarDuplicarTesoreria}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        Visibility="{Binding MostrarBotonDuplicar}" />

                                    <Button
                                        x:Name="btnAnularOrden"
                                        Width="150"
                                        Margin="0,0,5,0"
                                        Click="btnAnularOrden_Click"
                                        Content="Anular Orden Tesorería"
                                        IsEnabled="{Binding BotonesOrdenes}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        Visibility="Collapsed" />

                                    <Button
                                        x:Name="btnPendienteOrden"
                                        Width="180"
                                        Margin="0,0,5,0"
                                        Click="btnPendienteOrden_Click"
                                        Content="Pendientes Ordenes Tesorería"
                                        IsEnabled="{Binding BotonesOrdenes}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        Visibility="Collapsed" />

                                    <Button
                                        x:Name="cmdRefrescar"
                                        Width="85"
                                        Margin="0,0,5,0"
                                        Click="cmdRefrescar_Click"
                                        Content="Refrescar"
                                        IsEnabled="{Binding ActivarDuplicarTesoreria}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        ToolTipService.ToolTip="Consultar el documento de tesorería activo" />
                                </StackPanel>
                            </Border>

                            <Grid
                                x:Name="GridEdicion"
                                Height="Auto"
                                Background="White"
                                DataContext="{Binding TesoreriSelected}"
                                Visibility="{Binding DataContext.visNavegando, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
                                <!--  >  -->

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>


                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        IsEnabled="{Binding DataContext.cmbNombreConsecutivoHabilitado, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        Label="Cia"
                                        LabelPosition="Above">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20*" />
                                                <ColumnDefinition Width="70*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <A2UTILGEN:A2NumericBox
                                                Grid.Column="0"
                                                LostFocus="C1NumericBox_LostFocus"
                                                Maximum="2147483647"
                                                Minimum="0"
                                                NumberDecimalDigits="0"
                                                ShowButtons="False"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding IDCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />

                                            <TextBox
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                IsEnabled="False"
                                                MaxLength="50"
                                                Text="{Binding NombreCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="" />
                                            <my1:BuscadorGenericoListaButon
                                                Grid.Column="2"
                                                Margin="2,0,0,0"
                                                Agrupamiento="incluircompaniasclasestodasconfirma"
                                                CampoBusqueda="compania"
                                                EstadoItem="A"
                                                Etiqueta="Compania"
                                                IsEnabled="{Binding DataContext.cmbNombreConsecutivoHabilitado, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                TipoItem="compania"
                                                ToolTipService.ToolTip="Buscador Compañías"
                                                finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                        </Grid>
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        IsEnabled="{Binding DataContext.cmbNombreConsecutivoHabilitado, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        Label="{Binding ConverterParameter=NombreConsecutivo, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboConsecutivos"
                                            DisplayMemberPath="ID"
                                            ItemsSource="{Binding DataContext.listConsecutivos, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                            SelectedValue="{Binding NombreConsecutivo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                            SelectedValuePath="ID"
                                            ToolTipService.ToolTip="Consecutivos" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        IsEnabled="False"
                                        Label="{Binding ConverterParameter=IDDocumento, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <TextBox Text="{Binding IDDocumento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="IDDocumento" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        Label="{Binding ConverterParameter=Documento, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2DatePicker
                                            x:Name="fechaDocumentoBuscar"
                                            DisplayDateEnd="{Binding Documento, Mode=OneTime}"
                                            SelectedDate="{Binding Documento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                            ToolTipService.ToolTip="Documento" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        Label="{Binding ConverterParameter=IDBanco, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <A2UTILGEN:A2TextBox
                                                Grid.Column="0"
                                                KeyDown="txtComitenteBusqueda_KeyDown"
                                                MaxLength="9"
                                                Text="{Binding IDBanco, Mode=TwoWay}"
                                                TextAlignment="Right"
                                                TipoExpresion="SoloNumeros"
                                                ToolTipService.ToolTip="Banco" />

                                            <!--  Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=NombreBco}">  -->
                                            <TextBox
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                IsEnabled="False"
                                                Text="{Binding NombreBco, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="NombreBco" />

                                            <my1:BuscadorGenericoListaButon
                                                Grid.Column="2"
                                                Margin="2,0,0,0"
                                                Agrupamiento="BANCOSXCONSECUTIVO"
                                                CampoBusqueda="IDBanco"
                                                Condicion1="{Binding IDCompania, Mode=OneWay}"
                                                Condicion2="{Binding NombreConsecutivo}"
                                                EstadoItem="A"
                                                Etiqueta="Lista de Bancos"
                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                TipoItem="cuentasbancarias"
                                                finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                        </Grid>
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding DataContext.VisibilidadNumCheque, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                        Label="{Binding ConverterParameter=NumCheque, Converter={StaticResource ResourceKey=DisplayConverter}, Mode=OneWay}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2TextBox
                                            HorizontalContentAlignment="Right"
                                            MaxLength="12"

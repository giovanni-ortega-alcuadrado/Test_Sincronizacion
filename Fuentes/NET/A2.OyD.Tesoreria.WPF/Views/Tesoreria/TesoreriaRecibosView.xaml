<UserControl
    x:Class="TesoreriaRecibosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2Utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my1="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDTesoreria"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="350"
    MaxWidth="1200">

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <!--<src:A2UtilsViewModel x:Key="A2VM" />-->
        <src:StringConverter x:Key="StringConverter" />
        <src:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter" />
    </UserControl.Resources>

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot" ShowGridLines="False">

            <Grid.RowDefinitions>
                <!--  Fila del menu  -->
                <RowDefinition Height="Auto" />
                <!--  Fila de la forma/grid  -->
                <RowDefinition Height="Auto" MinHeight="43" />
            </Grid.RowDefinitions>

            <StackPanel Style="{StaticResource stpFiltro}">
                <A2Utils:ControlMenuA2
                    x:Name="cm"
                    DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                    DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                    EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                    Filtro="{Binding FiltroVM, Mode=TwoWay}"
                    HayDataForm="False"
                    IsItemValid="True"
                    ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                    ManejaMakerAndChecker="{Binding visibleap}"
                    Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                    MensajeError="{Binding ErrorForma}"
                    Modo="{Binding ModoMVVM, Mode=TwoWay}"
                    ObjetoSeleccionado="{Binding TesoreriSelected}"
                    PreguntarConfirmacion="False"
                    RegistroConVersion="{Binding visible}"
                    TextoFiltroTooltip="Se filtra por los campos Nombre Consecutivo, Número y Nombre"
                    TextoVersion="{Binding content}"
                    TituloVista="Recibos de Caja"
                    TituloVistaAdicional="registros"
                    TituloVista_CambioSelected="{Binding TesoreriSelected.HasChanges}"
                    TituloVista_CantidadRegistros="{Binding ListaTesoreria.Count}"
                    VisibilidadRefrescarCombos="True" />
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource Contenedor_Estilo}">
                <Grid x:Name="grdGridForma">

                    <StackPanel
                        x:Name="Buscar"
                        Grid.Column="0"
                        Height="Auto"
                        VerticalAlignment="Top"
                        Visibility="{Binding DataContext.visLista, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <Border Style="{StaticResource Contenedor_Paginador}">
                            <A2UTILGEN:A2DataPager
                                x:Name="datapager1"
                                PageSize="10"
                                Source="{Binding Items, ElementName=dg}" />
                        </Border>
                        <A2UTILGEN:A2GridView
                            x:Name="dg"
                            Height="Auto"
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding ListaTesoreriaPaged}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectedItem="{Binding TesoreriSelected, Mode=TwoWay}"
                            ValidatesOnDataErrors="None">
                            <A2UTILGEN:A2GridView.Columns>

                                <Telerik:GridViewDataColumn Header="Nombre Consecutivo" SortMemberPath="NombreConsecutivo">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding NombreConsecutivo}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>

                                <Telerik:GridViewDataColumn Header="Número" SortMemberPath="Recibo No.">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding IDDocumento}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>

                                <Telerik:GridViewDataColumn
                                    DataFormatString="MMM dd,yyyy"
                                    DataMemberBinding="{Binding Documento}"
                                    Header="Fecha" />

                                <Telerik:GridViewDataColumn Header="Nombre" SortMemberPath="Nombre">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Nombre}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding TipoIdentificacion}" Header="Tipo Id." />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding NroDocumento}" Header="Nro. Documento" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding EstadoDocumento}" Header="Estado" />
                                <Telerik:GridViewDataColumn
                                    DataFormatString="MMM dd,yyyy"
                                    DataMemberBinding="{Binding FecEstado}"
                                    Header="Fecha Estado" />

                                <Telerik:GridViewDataColumn
                                    Header="Estado Aprobación"
                                    IsVisible="{Binding DataContext.ColumnasVisibles, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanVisibilityConverter}}"
                                    SortMemberPath="Por_Aprobar">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding Por_Aprobar}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn
                                    DataMemberBinding="{Binding EstadoMC}"
                                    Header="Descripción Aprobación"
                                    IsVisible="{Binding DataContext.ColumnasVisibles, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanVisibilityConverter}}" />

                            </A2UTILGEN:A2GridView.Columns>
                        </A2UTILGEN:A2GridView>
                    </StackPanel>

                    <Grid>
                        <Grid
                            x:Name="GridBusqueda"
                            VerticalAlignment="Top"
                            DataContext="{Binding CamposBusquedaTesoreria}"
                            KeyDown="Buscar_KeyDown"
                            Visibility="{Binding DataContext.visBuscando, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <StackPanel Orientation="Vertical">
                                <Border>
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Telerik:DataFormDataField Grid.Column="0" Label="Cia">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30*" />
                                                        <ColumnDefinition Width="70*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <A2UTILGEN:A2NumericBox
                                                        IsEnabled="False"
                                                        Maximum="2147483647"
                                                        Minimum="0"
                                                        NumberDecimalDigits="0"
                                                        ShowButtons="False"
                                                        ValueFormat="NoSeparator"
                                                        Value="{Binding IDCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                    <TextBox
                                                        Grid.Column="1"
                                                        Margin="2,0,0,0"
                                                        IsEnabled="False"
                                                        MaxLength="50"
                                                        Text="{Binding NombreCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                        ToolTipService.ToolTip="" />
                                                    <my1:BuscadorGenericoListaButon
                                                        Grid.Column="2"
                                                        Margin="2,0,0,0"
                                                        Agrupamiento="incluircompaniasclasestodasconfirma"
                                                        CampoBusqueda="companiabusqueda"
                                                        EstadoItem="A"
                                                        Etiqueta="Compania"
                                                        TipoItem="compania"
                                                        ToolTipService.ToolTip="Buscador Compañías"
                                                        finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                                </Grid>

                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField Grid.Column="1" Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=NombreConsecutivo}">
                                                <ComboBox
                                                    x:Name="NombreConsecutivo"
                                                    DisplayMemberPath="ID"
                                                    ItemsSource="{Binding DataContext.listConsecutivosBusqueda, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding NombreConsecutivo, Mode=TwoWay}"
                                                    SelectedValuePath="ID" />
                                            </Telerik:DataFormDataField>
                                            <Telerik:DataFormDataField Grid.Column="2" Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=IDDocumento}">
                                                <A2UTILGEN:A2NumericBox
                                                    x:Name="IDDocumento"
                                                    Maximum="2147483647"
                                                    ShowButtons="False"
                                                    Value="{Binding IDDocumento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                            </Telerik:DataFormDataField>
                                            <Telerik:DataFormDataField Grid.Column="3" Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Documento}">
                                                <A2UTILGEN:A2DatePicker
                                                    x:Name="DocumentoB"
                                                    DisplayDate="{Binding DisplayDate, Mode=OneWay}"
                                                    SelectedDate="{Binding Documento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                            </Telerik:DataFormDataField>
                                        </Grid>

                                        <Label Content="Estado Maker and Checker" Visibility="{Binding DataContext.visibilidad, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Visibility="{Binding DataContext.visibilidad, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="Aprobados"
                                                        Content="Aprobados"
                                                        GroupName="Busqueda"
                                                        IsChecked="{Binding Aprobados, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="PorAprobar"
                                                        Content="Por aprobar"
                                                        GroupName="Busqueda"
                                                        IsChecked="{Binding PorAprobar, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="NoAprobados"
                                                        Content="No aprobados"
                                                        GroupName="Busqueda"
                                                        IsChecked="{Binding NoAprobados, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                            </StackPanel>
                                            <StackPanel Visibility="{Binding DataContext.visibilidadSubEstados, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="Ingreso"
                                                        Content="Ingreso"
                                                        GroupName="filtroBusqueda"
                                                        IsChecked="{Binding Ingreso, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="Modificacion"
                                                        Content="Modificacion"
                                                        GroupName="filtroBusqueda"
                                                        IsChecked="{Binding Modificacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="Retiro"
                                                        Content="Retiro"
                                                        GroupName="filtroBusqueda"
                                                        IsChecked="{Binding Retiro, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        x:Name="Todos"
                                                        Content="Todos"
                                                        GroupName="filtroBusqueda"
                                                        IsChecked="{Binding Todos, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                </Telerik:DataFormDataField>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!--  Dataform edición de registro  -->
                        <Grid
                            x:Name="Editar"
                            Grid.Row="1"
                            Height="Auto"
                            KeyDown="Edicion_KeyDown"
                            Visibility="{Binding visNavegando}">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" VerticalAlignment="Center">
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="btnImprimirProvi"
                                        Width="100"
                                        Margin="0,5,5,5"
                                        Click="btnImprimir_Click"
                                        Content="Imp recibo provi"
                                        IsEnabled="{Binding HabilitarImpresion}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}" />

                                    <Button
                                        x:Name="btnImprimir"
                                        Width="85"
                                        Margin="0,0,5,0"
                                        Click="btnImprimir_Click"
                                        Content="Imprimir"
                                        IsEnabled="{Binding HabilitarImpresion}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}" />

                                    <Button
                                        x:Name="btnDuplicar"
                                        Width="85"
                                        Margin="0,0,5,0"
                                        Click="btnDuplicar_Click"
                                        Content="Duplicar"
                                        IsEnabled="{Binding ActivarDuplicarTesoreria}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        Visibility="{Binding MostrarBotonDuplicar}" />

                                    <Button
                                        x:Name="btnAnularOrden"
                                        Width="150"
                                        Margin="0,0,5,0"
                                        Click="btnAnularOrden_Click"
                                        Content="Anular Orden Tesorería"
                                        IsEnabled="{Binding BotonesOrdenes}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        Visibility="Collapsed" />

                                    <Button
                                        x:Name="btnPendienteOrden"
                                        Width="180"
                                        Margin="0,0,5,0"
                                        Click="btnPendienteOrden_Click"
                                        Content="Pendientes Ordenes Tesorería"
                                        IsEnabled="{Binding BotonesOrdenes}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        Visibility="Collapsed" />

                                    <Button
                                        x:Name="cmdRefrescar"
                                        Width="85"
                                        Margin="0,0,5,0"
                                        Click="cmdRefrescar_Click"
                                        Content="Refrescar"
                                        IsEnabled="{Binding ActivarDuplicarTesoreria}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        ToolTipService.ToolTip="Consultar el documento de tesorería activo" />

                                </StackPanel>
                            </Border>

                            <Grid
                                x:Name="GridEdicion"
                                Grid.Row="1"
                                DataContext="{Binding TesoreriSelected}"
                                Visibility="{Binding DataContext.visNavegando, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <!--  Fila 1  -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Telerik:DataFormDataField
                                        Grid.Column="0"
                                        IsEnabled="{Binding DataContext.cmbNombreConsecutivoHabilitado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="Cia"
                                        LabelPosition="Above">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*" />
                                                <ColumnDefinition Width="70*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <A2UTILGEN:A2NumericBox
                                                Grid.Column="0"
                                                LostFocus="C1NumericBox_LostFocus"
                                                Maximum="2147483647"
                                                Minimum="0"
                                                NumberDecimalDigits="0"
                                                ShowButtons="False"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding IDCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />


                                            <TextBox
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                IsEnabled="False"
                                                MaxLength="50"
                                                Text="{Binding NombreCompania, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="" />

                                            <my1:BuscadorGenericoListaButon
                                                Grid.Column="2"
                                                Margin="2,0,0,0"
                                                Agrupamiento="incluircompaniasclasestodasconfirma"
                                                CampoBusqueda="compania"
                                                EstadoItem="A"
                                                Etiqueta="Compania"
                                                IsEnabled="{Binding DataContext.cmbNombreConsecutivoHabilitado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                TipoItem="compania"
                                                ToolTipService.ToolTip="Buscador Compañías"
                                                finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                        </Grid>
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Column="1"
                                        IsEnabled="{Binding DataContext.cmbNombreConsecutivoHabilitado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=NombreConsecutivo}"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cboConsecutivos"
                                            DisplayMemberPath="ID"
                                            ItemsSource="{Binding DataContext.listConsecutivos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            SelectedValue="{Binding NombreConsecutivo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                            SelectedValuePath="ID"
                                            ToolTipService.ToolTip="Consecutivos" />
                                    </Telerik:DataFormDataField>


                                    <Telerik:DataFormDataField
                                        Grid.Column="2"
                                        IsEnabled="False"
                                        Label="Número"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2NumericBox
                                            IsEnabled="False"
                                            Maximum="2147483647"
                                            ShowButtons="False"
                                            Value="{Binding IDDocumento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Column="3"
                                        IsEnabled="{Binding DataContext.EditandoRegistro, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Documento}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2DatePicker
                                            Name="fechaDocumentoBuscar"
                                            DisplayDateEnd="{Binding DataContext.FechaActual, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            SelectedDate="{Binding Documento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                            ToolTipService.ToolTip="Documento" />
                                    </Telerik:DataFormDataField>

                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Telerik:DataFormDataField
                                        Grid.Column="0"
                                        IsEnabled="{Binding DataContext.EditandoRegistro, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=IdComitente}"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2TextBox
                                            MaxLength="17"
                                            Text="{Binding IdComitente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                            TextAlignment="Right"
                                            TipoExpresion="SoloNumeros" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Column="1"
                                        IsEnabled="{Binding DataContext.EditandoRegistro, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="Nombre"
                                        LabelPosition="Above">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                Grid.Column="0"
                                                Text="{Binding Nombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="Nombre" />
                                            <my1:BuscadorClienteListaButon
                                                Grid.Column="1"
                                                Margin="2,0,0,0"
                                                Agrupamiento="mostrardigito"
                                                CampoBusqueda="Nombre"
                                                EstadoComitente="A"
                                                ExcluirCodigosCompania="True"
                                                IDCompania="{Binding IDCompania}"
                                                TipoVinculacion="C"
                                                finalizoBusqueda="Buscar_finalizoBusqueda" />
                                        </Grid>
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Column="2"
                                        IsEnabled="{Binding DataContext.EditandoRegistro, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="Tipo Identificación"
                                        LabelPosition="Above">
                                        <ComboBox
                                            x:Name="cmbTipoId"
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosEspecificos[Tesoreria_RecibosCaja_TipoID], Source={StaticResource A2VM}}"
                                            SelectedValue="{Binding TipoIdentificacion, Mode=TwoWay}"
                                            SelectedValuePath="ID" />
                                    </Telerik:DataFormDataField>

                                    <Telerik:DataFormDataField
                                        Grid.Column="3"
                                        IsEnabled="{Binding DataContext.EditandoRegistro, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="Número"
                                        LabelPosition="Above">
                                        <A2UTILGEN:A2TextBox
                                            Text="{Binding NroDocumento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                            TextAlignment="Right"
                                            TipoExpresion="LetrasNumeros" />
                                    </Telerik:DataFormDataField>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Telerik:DataFormDataField
                                        Grid.Column="0"
                                        IsEnabled="False"
                                        Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Estado}"
                                        LabelPosition="Above">
                                        <ListBox
                                            DisplayMemberPath="Descripcion"
                                            ItemsSource="{Binding DiccionarioCombosA2[EstadosTesoreria], Source={StaticResource A2VM}}"
                                            SelectedValue="{Binding Estado, Mode=TwoWay}"
                                            SelectedValuePath="ID">
                                            <ListBox.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ListBox.ItemsPanel>
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                <Grid Background="Transparent">
                                                                    <RadioButton
                                                                        Margin="3"
                                                                        IsChecked="{TemplateBinding IsSelected}"
                                                                        IsHitTestVisible="False">
                                                                        <ContentPresenter />
                                                                    </RadioButton>
                                                                </Grid>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>

<UserControl
    x:Class="OrdenesView_MI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:OyD="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDMI"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="800"
    MaxWidth="1000">

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:StringConverter x:Key="StringConverter" />
        <src:clsLiderConverter x:Key="cvLider" />
        <src:LongConverter x:Key="cvCodigo" />
        <src:TextoVacioVisibilityConverter x:Key="TextoVacioVisibilityConverter" />
    </UserControl.Resources>
    <!--<src:TextoVacioVisibilityConverter x:Key="TextoVacioVisibilityConverter"/>-->

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                Style="{StaticResource stpHead}">
                <TextBlock Style="{StaticResource txbNumRegistros}" Visibility="{Binding OrdenSelected.HasChanges, Converter={StaticResource VisibilityConverter}}" />
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="0">
                <A2:ControlMenuA2_MakerAndChecker
                    x:Name="cm"
                    DF="{Binding df}"
                    DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                    DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                    EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                    EventoCancelarGrabacion="CancelarEditarRegistro_Click"
                    EventoConfirmarGrabacion="cm_EventoConfirmarGrabacion"
                    Filtro="{Binding FiltroVM, Mode=TwoWay}"
                    IsItemValid="True"
                    ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                    ManejaMakerAndChecker="{Binding ManejaMakerAndChecker}"
                    Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                    MensajeError="{Binding ErrorForma}"
                    Modo="{Binding ModoMVVM, Mode=TwoWay}"
                    ObjetoSeleccionado="{Binding OrdenSelected}"
                    RegistroSeleccionadoEsCambio="{Binding RegistroActivoPorAprobar}"
                    RegistroTieneCambios="{Binding RegistroTieneCambios}"
                    TextoCambioARegistroModificado="{Binding TextoCambioARegistroModificado}"
                    TextoCambioARegistroOriginal="{Binding TextoCambioARegistroOriginal}"
                    TextoFiltroTooltip="Se filtra por los campos Número de orden y Código OYD"
                    TituloVista="órdenes"
                    TituloVistaAdicional="registros"
                    TituloVista_CantidadRegistros="{Binding ListaOrdenes.Count, StringFormat=n0}" />
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource Contenedor_Estilo}">
                <Grid
                    x:Name="grdGridForma"
                    Grid.Row="2"
                    Grid.Column="1">
                    <Border HorizontalAlignment="Center" CornerRadius="5">
                        <StackPanel
                            x:Name="Buscar"
                            Grid.Column="0"
                            Width="920"
                            Height="Auto"
                            VerticalAlignment="Top">
                            <Border Style="{StaticResource Contenedor_Paginador}">
                                <A2UTILGEN:A2DataPager
                                    x:Name="datapager1"
                                    PageSize="10"
                                    Source="{Binding Items, ElementName=dg}" />
                            </Border>
                            <A2UTILGEN:A2GridView
                                x:Name="dg"
                                Height="Auto"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                FrozenColumnCount="2"
                                IsReadOnly="True"
                                ItemsSource="{Binding ListaOrdenesPaged}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectedItem="{Binding OrdenSelected, Mode=TwoWay}"
                                ValidatesOnDataErrors="None">
                                <A2UTILGEN:A2GridView.Columns>
                                    <Telerik:GridViewDataColumn Header="Tipo">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox
                                                    Width="Auto"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_TIPO_OPERACION], Source={StaticResource A2VM}}"
                                                    SelectedValue="{Binding Tipo, Mode=TwoWay}"
                                                    SelectedValuePath="ID"
                                                    ToolTipService.ToolTip="Tipo de operación realizado" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn Header="Número" SortMemberPath="NroOrden">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding NroOrden}"
                                                    Style="{StaticResource HyperlinkLikeButton}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding Version}" Header="Versión" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDComitente}" Header="Código OYD">
                                        <Telerik:GridViewDataColumn.CellStyle>
                                            <Style TargetType="Telerik:GridViewCell">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </Telerik:GridViewDataColumn.CellStyle>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding NombreCliente}" Header="Comitente" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding Nemotecnico}" Header="Especie" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding Cantidad, StringFormat='N1'}" Header="Cantidad">
                                        <Telerik:GridViewDataColumn.CellStyle>
                                            <Style TargetType="Telerik:GridViewCell">
                                                <Setter Property="HorizontalAlignment" Value="Right" />
                                            </Style>
                                        </Telerik:GridViewDataColumn.CellStyle>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn Header="Estado">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox
                                                    Width="Auto"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_ESTADOS_ORDEN], Source={StaticResource A2VM}}"
                                                    SelectedValue="{Binding Estado, Mode=TwoWay}"
                                                    SelectedValuePath="ID"
                                                    ToolTipService.ToolTip="Estado de la orden" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding FechaOrden, StringFormat='MMM dd, yyyy hh:mm:ss tt'}" Header="Fecha orden" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding VigenciaHasta, StringFormat='MMM dd, yyyy'}" Header="Fecha vigencia" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding NombreBolsa}" Header="Bolsa" />
                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding NombreMoneda}" Header="Moneda" />
                                    <Telerik:GridViewDataColumn Header="Clasificación">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox
                                                    Width="Auto"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_OBJETO], Source={StaticResource A2VM}}"
                                                    SelectedValue="{Binding Objeto, Mode=TwoWay}"
                                                    SelectedValuePath="ID"
                                                    ToolTipService.ToolTip="Objeto órdenes extraordinarias" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>
                                </A2UTILGEN:A2GridView.Columns>
                            </A2UTILGEN:A2GridView>
                        </StackPanel>
                    </Border>

                    <!--  busqueda avanzada  -->
                    <Border
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        CornerRadius="5">

                        <!--<A2UTILGEN:A2DataForm
                                x:Name="dfBuscar"
                                Width="920"
                                VerticalAlignment="Top"
                                AutoGenerateFields="False"
                                CommandButtonsVisibility="None"
                                CurrentItem="{Binding cb}"
                                Visibility="{Binding visBuscando}">
                            <A2UTILGEN:A2DataForm.EditTemplate>
                                <DataTemplate>-->

                        <Grid Background="White">
                            <StackPanel Width="920" Visibility="{Binding DataContext.visBuscando, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <Border
                                    Background="White"
                                    BorderBrush="Silver"
                                    BorderThickness="1"
                                    CornerRadius="0">
                                    <Grid DataContext="{Binding cb}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Orden número"
                                            LabelPosition="Above">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <ComboBox
                                                    Grid.Column="0"
                                                    DisplayMemberPath="Descripcion"
                                                    ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_ANOS_ORDEN], Source={StaticResource A2VM}}"
                                                    SelectedValue="{Binding AnoOrden, Mode=TwoWay}"
                                                    SelectedValuePath="ID" />
                                                <A2UTILGEN:A2TextBox
                                                    x:Name="txtNroOrdenBusqueda"
                                                    Grid.Column="1"
                                                    MaxLength="6"
                                                    Text="{Binding NroOrden, Mode=TwoWay}"
                                                    TipoExpresion="SoloNumeros" />
                                            </Grid>
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Versión"
                                            LabelPosition="Above">
                                            <TextBox MaxLength="2" Text="{Binding Version, Mode=TwoWay}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Orden de"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_TIPO_OPERACION], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding Tipo, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Fecha de la orden"
                                            LabelPosition="Above">
                                            <A2UTILGEN:A2DatePicker SelectedDate="{Binding FechaOrden, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Fecha de elaboración de la orden" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Vigencia"
                                            LabelPosition="Above">
                                            <A2UTILGEN:A2DatePicker SelectedDate="{Binding VigenciaHasta, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Fecha hasta la cual está vigente la orden" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Estado"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_ESTADOS_ORDEN], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding Estado, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Estado maker and checker"
                                            LabelPosition="Above"
                                            Visibility="{Binding VisibleMakerAndCheker}">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DataContext.ListaComboEstadoMaker, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding EstadoMakerChecker, Mode=TwoWay}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Estado de la orden en el maker and checker" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="7"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            Label="Por"
                                            LabelPosition="Above"
                                            Visibility="{Binding VisibleMakerAndCheker}">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DataContext.ListaComboAccionMaker, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding AccionMakerChecker, Mode=TwoWay}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Acción realizada sobre la orden" />
                                        </Telerik:DataFormDataField>

                                        <!--  ********************************************  -->

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Condición de negociación"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[CONDICNEGOCIACION], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding CondicionesNegociacion, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Tipo de inversión"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[TIPOINVERSION], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding TipoInversion, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Clasificación"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosEspecificos[Ord_Acciones_O_OBJETO], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding Objeto, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="3"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Tipo límite / Naturaleza"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[TIPOLIMITE], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding TipoLimite, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Canal"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[CANALLEO], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding CanalRecepcion, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Medio verificable"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[MEDIOVERLEO], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding MedioVerificable, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            Label="Forma de pago"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[FORMAPAGO], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding FormaPago, Mode=TwoWay}"
                                                SelectedValuePath="ID" />
                                        </Telerik:DataFormDataField>
                                        <!--  *************************************************  -->


                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="2"
                                            VerticalAlignment="Top"
                                            Label="Comitente"
                                            LabelPosition="Above">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox
                                                    Grid.Column="0"
                                                    IsEnabled="False"
                                                    MaxLength="17"
                                                    Text="{Binding IDComitente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    TextAlignment="Right" />
                                                <OyD:BuscadorClienteListaButon
                                                    Grid.Column="1"
                                                    Margin="2,0,0,0"
                                                    Agrupamiento=""
                                                    CampoBusqueda="IdComitenteBuscar"
                                                    EstadoComitente="T"
                                                    TipoVinculacion="C"
                                                    finalizoBusqueda="BuscadorClienteListaButon_comitenteAsignado" />
                                            </Grid>
                                        </Telerik:DataFormDataField>
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.RowSpan="2"
                                            Grid.Column="2"
                                            Margin="10,0,0,0"
                                            DataContext="{Binding DataContext.cb.ComitenteSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                            Orientation="Vertical">
                                            <TextBlock Text="{Binding Nombre}" />
                                            <TextBlock Text="{Binding IdComitente, StringFormat='Código OYD \{0}'}" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding TipoIdentificacion, StringFormat='\{0} '}" />
                                                <TextBlock Text="{Binding NroDocumento, StringFormat='N0'}" />
                                            </StackPanel>
                                            <TextBlock Text="{Binding Categoria}" />
                                            <TextBlock Text="{Binding Estado}" />
                                        </StackPanel>
                                        <!--  ************************************  -->


                                        <Telerik:DataFormDataField
                                            Grid.Row="3"
                                            Grid.Column="2"
                                            VerticalAlignment="Top"
                                            Label="Ordenante"
                                            LabelPosition="Above">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox
                                                    Grid.Column="0"
                                                    IsEnabled="False"
                                                    MaxLength="17"
                                                    Text="{Binding IDOrdenante, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    TextAlignment="Right" />
                                                <OyD:BuscadorClienteListaButon
                                                    Grid.Column="1"
                                                    Margin="2,0,0,0"
                                                    Agrupamiento=""
                                                    CampoBusqueda="IdOrdenanteBuscar"
                                                    EstadoComitente="T"
                                                    TipoVinculacion="O"
                                                    finalizoBusqueda="BuscadorClienteListaButon_comitenteAsignado" />
                                            </Grid>
                                        </Telerik:DataFormDataField>
                                        <StackPanel
                                            Grid.Row="4"
                                            Grid.RowSpan="3"
                                            Grid.Column="2"
                                            Margin="10,0,0,0"
                                            DataContext="{Binding DataContext.cb.OrdenanteSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                            Orientation="Vertical">
                                            <TextBlock Text="{Binding Nombre}" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding TipoIdentificacion, StringFormat='\{0} '}" />
                                                <TextBlock Text="{Binding NroDocumento, StringFormat='N0'}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <Telerik:DataFormDataField
                                            Grid.Row="6"
                                            Grid.Column="2"
                                            VerticalAlignment="Top"
                                            Label="Bolsa"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombosA2[Bolsas_MI], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding IdBolsa, Converter={StaticResource StringConverter}, Mode=TwoWay}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Bolsa en la cual se negocia la orden" />
                                        </Telerik:DataFormDataField>


                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!--  Dataform edición de registro  -->
                            <StackPanel
                                x:Name="Editar"
                                Height="Auto"
                                Visibility="{Binding DataContext.visNavegando, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                <StackPanel
                                    Grid.Row="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Style="{StaticResource stpFiltro}">

                                    <Button
                                        x:Name="cmdComprar"
                                        Click="cmdComprar_Click"
                                        Content="Comprar"
                                        IsEnabled="{Binding DataContext.ActivarSeleccionTipoOrden, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        ToolTipService.ToolTip="Ingresar una nueva orden de compra"
                                        Visibility="{Binding DataContext.IngresoOrdenActivo, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" />
                                    <Button
                                        x:Name="cmdVender"
                                        Click="cmdVender_Click"
                                        Content="Vender"
                                        IsEnabled="{Binding DataContext.ActivarSeleccionTipoOrden, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        ToolTipService.ToolTip="Ingresar una nueva orden de venta"
                                        Visibility="{Binding DataContext.IngresoOrdenActivo, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" />
                                    <Button
                                        x:Name="cmdDuplicar"
                                        Click="cmdDuplicar_Click"
                                        Content="Duplicar"
                                        IsEnabled="{Binding DataContext.ActivarDuplicarOrden, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        ToolTipService.ToolTip="Duplicar la orden actual"
                                        Visibility="{Binding DataContext.IngresoOrdenActivo, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}" />
                                    <Button
                                        x:Name="cmdRefrescar"
                                        Click="cmdRefrescar_Click"
                                        Content="Refrescar"
                                        IsEnabled="{Binding DataContext.ActivarDuplicarOrden, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                        Style="{StaticResource ControlButtonSecundaryStyle}"
                                        ToolTipService.ToolTip="Consultar la orden activa" />
                                </StackPanel>

                                <A2UTILGEN:A2DataForm
                                    x:Name="df"
                                    VerticalAlignment="Top"
                                    AutoGenerateFields="False"
                                    CommandButtonsVisibility="None"
                                    CurrentItem="{Binding OrdenSelectedcl}"
                                    Visibility="Collapsed" />



                                <Border
                                    Background="White"
                                    BorderBrush="Silver"
                                    BorderThickness="1"
                                    CornerRadius="0">
                                    <Grid x:Name="LayoutRoot1" DataContext="{Binding OrdenSelected}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />

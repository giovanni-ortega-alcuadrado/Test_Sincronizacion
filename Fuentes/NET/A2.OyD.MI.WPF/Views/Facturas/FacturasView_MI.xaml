                                <TabControl>
                                    <TabItem Name="TabLiquidacione" Header="Liquidaciones">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0">
                                                <!--<A2:ControlMenuDetalleA2 x:Name="cmLiquidacione"
                                                              Mensaje="{Binding MensajeMVVM, Mode= TwoWay}"

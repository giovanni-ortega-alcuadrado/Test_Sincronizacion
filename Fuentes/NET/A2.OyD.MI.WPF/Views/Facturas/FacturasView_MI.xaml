                                                    Height="210"
                                                    VerticalAlignment="Top"
                                                    AutoGenerateColumns="False"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ListaLiquidaciones}"
                                                    ScrollViewer.HorizontalScrollBarVisibility="Auto"

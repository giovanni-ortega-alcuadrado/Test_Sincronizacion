                                        <Grid x:Name="LayoutRoot" ShowGridLines="False">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>


                                            <Telerik:DataFormDataField
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                VerticalAlignment="Top"
                                                Label="Número"
                                                LabelPosition="Above">
                                                <TextBox Text="{Binding Prefijo_Numero}" ToolTipService.ToolTip="Numero" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Label="Fecha Documento"
                                                LabelPosition="Above">
                                                <A2UTILGEN:A2DatePicker
                                                    HorizontalAlignment="Left"
                                                    SelectedDate="{Binding Fecha_Documento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    ToolTipService.ToolTip="Documento" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                VerticalAlignment="Top"
                                                Label="Comitente"
                                                LabelPosition="Above">
                                                <TextBox Text="{Binding Comitente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Comitente" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Label="Nombre"
                                                LabelPosition="Above">
                                                <TextBox Text="{Binding Nombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Nombre" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                VerticalAlignment="Top"
                                                Label="Impresiones"
                                                LabelPosition="Above">
                                                <TextBox Text="{Binding Impresiones, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Impresiones" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                VerticalAlignment="Top"
                                                Label="Fecha_Estado"
                                                LabelPosition="Above">
                                                <A2UTILGEN:A2DatePicker
                                                    HorizontalAlignment="Left"
                                                    SelectedDate="{Binding Fecha_Estado, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    ToolTipService.ToolTip="Estado" />
                                            </Telerik:DataFormDataField>

                                            <!--<Border Style="{StaticResource BordeAgrupar}" Grid.Row="3">-->
                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="2"
                                                Orientation="Horizontal">
                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        Content="Anulada"
                                                        GroupName="Busqueda"
                                                        IsChecked="{Binding DataContext.EstadoAnulada, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        IsEnabled="False" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField>
                                                    <RadioButton
                                                        Content="Impresa"
                                                        GroupName="Busqueda"
                                                        IsChecked="{Binding DataContext.EstadoImpresa, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        IsEnabled="False" />
                                                </Telerik:DataFormDataField>
                                            </StackPanel>
                                            <!--</Border>-->
                                        </Grid>
                                        <!--</StackPanel>-->
                                    </DataTemplate>
                                </A2UTILGEN:A2DataForm.EditTemplate>
                            </A2UTILGEN:A2DataForm>

<UserControl
    x:Class="ActLiquidacionesImportadasView_MI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2Utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:my1="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDMI"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="800"
    MaxWidth="100">

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
    </UserControl.Resources>

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot" ShowGridLines="False">
            <!--<Grid.Resources>

            </Grid.Resources>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <!--  Fila del menu  -->
                <RowDefinition Height="auto" />
                <!--  Fila de la forma/grid  -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource stpFiltro}">
                <!--  Editando="{Binding Editando, Mode= TwoWay}"  -->
                <A2Utils:ControlMenuA2
                    x:Name="cm"
                    DF="{Binding df}"
                    DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                    DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                    EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                    EventoCancelarGrabacion="CancelarEditarRegistro_Click"
                    EventoConfirmarGrabacion="cm_EventoConfirmarGrabacion"
                    Filtro="{Binding FiltroVM, Mode=TwoWay}"
                    IsItemValid="True"
                    ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                    Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                    MensajeError="{Binding ErrorForma}"
                    Modo="{Binding ModoMVVM, Mode=TwoWay}"
                    ObjetoSeleccionado="{Binding ImportacionLiSelected}"
                    TextoFiltroTooltip="Filtra por los campos Liquidación  y Especie"
                    TituloVista="Actualización de Importación Mercado Integrado"
                    TituloVistaAdicional="registros"
                    TituloVista_CambioSelected="{Binding ImportacionLiSelected.HasChanges}"
                    TituloVista_CantidadRegistros="{Binding ListaImportacionLiq.Count}" />

                <!--  Posibles botones de comandos	
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button  Content="Ver resultados" fxui:Interaction.Action="$model.MostrarResultadosEjecucion()" IsEnabled="{Binding Navegando}"  Style="{StaticResource EstiloBotonAFG}" Background="White"  BorderThickness="0"  />
                </StackPanel>
				-->
                <!--<TextBlock Text="(*) Campos por los cuales se realiza el filtro." Margin="5,0,0,0" Style="{StaticResource txbNumRegistros}"/>-->

                <TextBlock
                    Height="Auto"
                    Margin="3"
                    Foreground="Red"
                    Text="{Binding ErrorForma}"
                    Visibility="{Binding VisibilidadErrores}" />
            </StackPanel>

            <Grid
                x:Name="grdGridForma"
                Grid.Row="2"
                Grid.Column="1">


                <Border
                    Width="650"
                    HorizontalAlignment="Center"
                    CornerRadius="5">
                    <StackPanel
                        x:Name="Buscar"
                        Grid.Column="0"
                        Width="650"
                        Height="Auto"
                        VerticalAlignment="Top">
                        <Border Style="{StaticResource Contenedor_Paginador}">
                            <A2UTILGEN:A2DataPager
                                x:Name="datapager1"
                                PageSize="10"
                                Source="{Binding Items, ElementName=dg}" />
                        </Border>
                        <A2UTILGEN:A2GridView
                            x:Name="dg"
                            Height="Auto"
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            FrozenColumnCount="5"
                            IsReadOnly="True"
                            ItemsSource="{Binding ListaImportacionLiqPaged}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectedItem="{Binding ImportacionLiSelected, Mode=TwoWay}"
                            ValidatesOnDataErrors="None">
                            <A2UTILGEN:A2GridView.Columns>

                                <Telerik:GridViewDataColumn Header="Liquidación" SortMemberPath="ID">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding ID}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Parcial}" Header="Parcial">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding TipoOrden}" Header="Tipo" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Clase}" Header="Clase" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDEspecie}" Header="Especie" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDOrden}" Header="Orden*">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDComitente}" Header="Comitente">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Nombre}" Header="Nombre Comitente" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding IDOrdenante}" Header="Ordenante">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Liquidacion, StringFormat='MMM dd, yyyy'}" Header="Fecha Liquidación" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Cumplimiento, StringFormat='MMM dd, yyyy'}" Header="Fecha Cumplimiento" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Emision, StringFormat='MMM dd, yyyy'}" Header="Fecha Emision" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Vencimiento, StringFormat='MMM dd, yyyy'}" Header="Fecha Vencimiento" />
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Cantidad, StringFormat=\{0:n0\}}" Header="Cantidad">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Precio, StringFormat=c}" Header="Precio">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding TotalLiq, StringFormat=c}" Header="Total Liquidación">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding Comision, StringFormat=c}" Header="Comisión">
                                    <Telerik:GridViewDataColumn.CellStyle>
                                        <Style TargetType="Telerik:GridViewCell">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </Telerik:GridViewDataColumn.CellStyle>
                                </Telerik:GridViewDataColumn>
                            </A2UTILGEN:A2GridView.Columns>
                        </A2UTILGEN:A2GridView>
                    </StackPanel>
                </Border>

                <Border
                    Width="650"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    CornerRadius="5">
                    <Grid>
                        <!--  Dataform de búsqueda  -->
                        <A2UTILGEN:A2DataForm
                            x:Name="dfBuscar"
                            VerticalAlignment="Top"
                            AutoGenerateFields="False"
                            CommandButtonsVisibility="None"
                            CurrentItem="{Binding cb}"
                            Visibility="{Binding visBuscando}">
                            <A2UTILGEN:A2DataForm.EditTemplate>
                                <DataTemplate>
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=ID}">
                                            <A2UTILGEN:A2NumericBox
                                                Maximum="2147483647"
                                                Minimum="0"
                                                NumberDecimalDigits="0"
                                                ShowButtons="False"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding ID, Mode=TwoWay}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Parcial}">
                                            <A2UTILGEN:A2TextBox
                                                MaxLength="9"
                                                Text="{Binding Parcial, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                TextAlignment="Right"
                                                TipoExpresion="SoloNumeros" />
                                            <!--<A2UTILGEN:A2NumericBox  Value="{Binding Parcial, Mode=TwoWay}"  ValueFormat="Numeric" NumberDecimalDigits="0" Minimum="0" Maximum="2147483647"   ShowButtons="False" />-->
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=Liquidacion}">
                                            <A2UTILGEN:A2DatePicker
                                                HorizontalAlignment="Left"
                                                SelectedDate="{Binding Liquidacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="Liquidacion" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=IDComitente}">
                                            <A2UTILGEN:A2TextBox
                                                x:Name="txtComitenteBusqueda"
                                                MaxLength="17"
                                                Text="{Binding IDComitente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                TextAlignment="Right"
                                                TipoExpresion="SoloNumeros" />
                                            <!--<TextBox  Text="{Binding  IDComitente, Mode=TwoWay,NotifyOnValidationError=True,  ValidatesOnExceptions=True }"  ToolTipService.ToolTip="Comitente"  MaxLength="17" />-->
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Label="{Binding Mode=OneWay, Converter={StaticResource ResourceKey=DisplayConverter}, ConverterParameter=IDEspecie}">
                                            <TextBox
                                                MaxLength="20"
                                                Text="{Binding IDEspecie, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                ToolTipService.ToolTip="Especie" />
                                        </Telerik:DataFormDataField>

                                    </Grid>
                                </DataTemplate>
                            </A2UTILGEN:A2DataForm.EditTemplate>
                        </A2UTILGEN:A2DataForm>

                        <!--  Dataform edición de registro  -->
                        <StackPanel
                            x:Name="Editar"
                            Grid.Row="1"
                            Grid.Column="1"
                            Visibility="{Binding visNavegando}">
                            <A2UTILGEN:A2DataForm
                                x:Name="df"
                                VerticalAlignment="Top"
                                AutoGenerateFields="False"
                                CommandButtonsVisibility="None"
                                CurrentItem="{Binding ImportacionLiSelected}"
                                IsEnabled="{Binding Editando}">
                                <A2UTILGEN:A2DataForm.EditTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <!--<RowDefinition Height="1"/>-->
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Clase"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Clase, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Tipo Orden"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding TipoOrden, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            ToolTipService.ToolTip="Clase" />
                                                    </Telerik:DataFormDataField>
                                                </Grid>
                                            </Border>

                                            <!--  ++++++++++++++++++  -->
                                            <Border
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Liquidación"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding ID, Mode=OneWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="ID" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Parcial"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Parcial, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="Parcial" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Especie"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding IDEspecie, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            TextAlignment="Left"
                                                            ToolTipService.ToolTip="Parcial" />
                                                    </Telerik:DataFormDataField>
                                                </Grid>
                                            </Border>


                                            <Border
                                                Grid.Row="0"
                                                Grid.Column="1"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Fecha Liquidación"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2DatePicker SelectedDate="{Binding Liquidacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Liquidacion" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Fecha Cumplimiento"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2DatePicker SelectedDate="{Binding Cumplimiento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" ToolTipService.ToolTip="Liquidacion" />
                                                    </Telerik:DataFormDataField>
                                                </Grid>
                                            </Border>

                                            <Border
                                                Grid.Row="1"
                                                Grid.RowSpan="3"
                                                Grid.Column="1"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                        <RowDefinition Height="auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Precio"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Precio, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>



                                                    <Telerik:DataFormDataField
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Cantidad"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Cantidad, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=\{0:n0\}}"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Valor"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Transaccion_cur, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="3"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Comisión"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Comision, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="4"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Valor IVA"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding ValorIva, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="5"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Sub Total"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding SubTotalLiq, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="6"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Retención"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Retencion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="7"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Intereses"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding Intereses, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="8"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Serv. Bolsa"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding ServBolsaFijo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="9"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Total"
                                                        LabelPosition="Above">
                                                        <TextBox
                                                            IsEnabled="False"
                                                            Text="{Binding TotalLiq, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True, StringFormat=c}"
                                                            TextAlignment="Right"
                                                            ToolTipService.ToolTip="TipoOrden" />
                                                    </Telerik:DataFormDataField>

                                                </Grid>
                                            </Border>
                                            <Border
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                Style="{StaticResource BordeAgrupar}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="AUTO" />
                                                        <RowDefinition Height="AUTO" />
                                                        <RowDefinition Height="AUTO" />
                                                        <RowDefinition Height="AUTO" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />

                                                    </Grid.ColumnDefinitions>
                                                    <Telerik:DataFormDataField
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        VerticalAlignment="Top"
                                                        Label="Orden"
                                                        LabelPosition="Above">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>

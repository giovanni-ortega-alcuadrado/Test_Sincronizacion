<Window
    x:Class="EliminarImportacionLiqView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    x:Name="Eliminar"
    Title="Eliminación de Operaciones de Actualizar Importación"
    Width="420"
    Height="200"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Width="380"
            Margin="20,1,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="¿Está seguro que desea eliminar los registros que tiene seleccionados?"
            TextAlignment="Left"
            TextWrapping="Wrap" />

        <TextBlock
            Width="100"
            Margin="40,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Acciones"
            TextAlignment="Left"
            TextWrapping="NoWrap" />
        <RadioButton
            Name="chkAcciones"
            Width="25"
            Margin="20,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsChecked="{Binding logAcciones, Mode=TwoWay}" />

        <TextBlock
            Width="100"
            Margin="40,90,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="RentaFija"
            TextAlignment="Left"
            TextWrapping="NoWrap" />
        <RadioButton
            Name="chkRentaFija"
            Width="25"
            Margin="20,90,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsChecked="{Binding logRentaFija, Mode=TwoWay}" />
        <TextBlock
            Width="190"
            Margin="40,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Operaciones sin orden asociada"
            TextAlignment="Left"
            TextWrapping="NoWrap" />
        <TextBlock
            Width="100"
            Margin="40,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Todos"
            TextAlignment="Left"
            TextWrapping="NoWrap" />
        <RadioButton
            Name="chktodos"
            Width="25"
            Margin="20,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsChecked="{Binding logtodos, Mode=TwoWay}" />
        <RadioButton
            Name="chkOperaciones"
            Width="25"
            Margin="20,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            IsChecked="{Binding logOperaciones, Mode=TwoWay}" />

        <Button
            x:Name="CancelButton"
            Grid.Row="1"
            Width="75"
            Margin="0,12,120,0"
            HorizontalAlignment="Right"
            Content="No" />
        <Button
            x:Name="OKButton"
            Grid.Row="1"
            Width="75"
            Margin="0,12,200,0"
            HorizontalAlignment="Right"
            Content="Si" />
    </Grid>
</Window>

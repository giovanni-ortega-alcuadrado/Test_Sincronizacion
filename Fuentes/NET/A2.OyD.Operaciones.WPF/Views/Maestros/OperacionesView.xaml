<UserControl
    x:Class="OperacionesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2Utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:OyD="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:my1="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2OYDOperaciones"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="1000"
    MaxWidth="1320">

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:BooleanoConverterRadio x:Key="BooleanoConverterRadio" />
        <!--<src:StringConverter x:Key="StringConverter"/>-->
    </UserControl.Resources>

    <!--
        Descripción:    Diseño para la pantalla Operaciones
        Responsable:    Jorge Peña (Alcuadrado (S.A.)
        Fecha:          Abril 22/2015
    -->

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot" ShowGridLines="False">
            <Grid.RowDefinitions>
                <!--  Fila del menu  -->
                <RowDefinition Height="Auto" MinHeight="20" />
                <!--  Fila de la forma/grid  -->
                <RowDefinition Height="Auto" MinHeight="43" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <A2Utils:ControlMenuA2
                    x:Name="cm"
                    DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                    DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                    EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                    Filtro="{Binding FiltroVM, Mode=TwoWay}"
                    HayDataForm="False"
                    IsItemValid="True"
                    ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                    Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                    MensajeError="{Binding ErrorForma}"
                    Modo="{Binding ModoMVVM, Mode=TwoWay}"
                    ObjetoSeleccionado="{Binding EncabezadoSeleccionado}"
                    PreguntarConfirmacion="True"
                    TextoFiltroTooltip="Filtra por los campos número de liquidación y código del cliente "
                    TituloVista="Operaciones"
                    TituloVistaAdicional="registros"
                    TituloVista_CambioSelected="{Binding EncabezadoSeleccionado.HasChanges}"
                    TituloVista_CantidadRegistros="{Binding ListaEncabezado.Count}"
                    VisibilidadRefrescarCombos="True" />
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource Contenedor_Estilo}">
                <Grid x:Name="grdGridForma">
                    <Border>
                        <!--  ===========================  -->
                        <!--  Grid de navegación paginada  -->
                        <!--  ===========================  -->
                        <StackPanel
                            x:Name="Buscar"
                            VerticalAlignment="Top"
                            Visibility="{Binding visLista}">
                            <Border Style="{StaticResource Contenedor_Paginador}">
                                <A2UTILGEN:A2DataPager
                                    x:Name="datapager1"
                                    PageSize="15"
                                    Source="{Binding Items, ElementName=dg}" />
                            </Border>
                            <A2UTILGEN:A2GridView
                                x:Name="dg"
                                Height="Auto"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                FrozenColumnCount="1"
                                IsReadOnly="True"
                                ItemsSource="{Binding ListaEncabezadoPaginada}"
                                ScrollViewer.VerticalScrollBarVisibility="Visible"
                                SelectedItem="{Binding EncabezadoSeleccionado, Mode=TwoWay}"
                                ValidatesOnDataErrors="None">
                                <A2UTILGEN:A2GridView.Columns>

                                    <Telerik:GridViewDataColumn Header="Liquidación" SortMemberPath="Liquidación">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding lngID, Mode=TwoWay}"
                                                    Style="{StaticResource HyperlinkLikeButton}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcionTipo}" Header="Tipo" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcionClase}" Header="Clase" />

                                    <Telerik:GridViewDataColumn Header="Manual">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding logManual, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    IsEnabled="False" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDOrden}" Header="Orden" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDFactura}" Header="Factura" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngParcial}" Header="Parcial" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngParcialPadre}" Header="Parcial padre" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngDiasTramo}" Header="Días tramo" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding dtmLiquidacion, StringFormat='dd MMM, yyyy'}"
                                        Header="Fecha liquidación"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding dtmCumplimiento, StringFormat='dd MMM, yyyy'}"
                                        Header="Fecha cumplimiento"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn Header="Vendido">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding logVendido, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    IsEnabled="False" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDComitente}" Header="Comitente" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDOrdenante}" Header="Ordenante" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding strIDEspecie}" Header="Especie" />

                                    <Telerik:GridViewDataColumn Header="Aplazamiento">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsChecked="{Binding logAplazamiento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    IsEnabled="False" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDBolsa}" Header="Bolsa" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngPlazo}" Header="Plazo" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngDiasVencimiento}" Header="Días al vcto." />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding dblTasaEfectiva}" Header="Efectiva" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding strModalidad}" Header="Modalidad" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding dtmEmision, StringFormat='dd MMM, yyyy'}"
                                        Header="Fecha Emisión"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding dtmVencimiento, StringFormat='dd MMM, yyyy'}"
                                        Header="Fecha vencimiento"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding strPlaza}" Header="Plaza" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDComisionistaLocal}" Header="Comisionista local" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIDComisionistaOtraPlaza}" Header="Comisionista OP" />

                                    <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcionCiudadOtraPlaza}" Header="Ciudad OP" />


                                </A2UTILGEN:A2GridView.Columns>
                            </A2UTILGEN:A2GridView>
                        </StackPanel>
                    </Border>

                    <Border VerticalAlignment="Top">
                        <Grid>
                            <!--  ====================  -->
                            <!--  Dataform de búsqueda  -->
                            <!--  ====================  -->
                            <A2UTILGEN:A2DataForm
                                x:Name="dfBuscar"
                                VerticalAlignment="Top"
                                AutoGenerateFields="False"
                                BorderThickness="0"
                                CommandButtonsVisibility="None"
                                CurrentItem="{Binding cb}"
                                Visibility="{Binding visBuscando}">
                                <A2UTILGEN:A2DataForm.EditTemplate>
                                    <DataTemplate>
                                        <Grid VerticalAlignment="Top">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Nro. Orden  -->
                                            <Telerik:DataFormDataField
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Label="Orden"
                                                LabelPosition="Above">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40*" />
                                                        <ColumnDefinition Width="60*" />
                                                    </Grid.ColumnDefinitions>

                                                    <A2UTILGEN:A2NumericBox
                                                        Maximum="2147483647"
                                                        Minimum="0"
                                                        ShowButtons="True"
                                                        ToolTipService.ToolTip="IDOrden"
                                                        ValueFormat="NoSeparator"
                                                        Value="{Binding intFechaOrden, Mode=TwoWay}" />
                                                    <TextBox
                                                        x:Name="txtnOrden"
                                                        Grid.Column="1"
                                                        GotFocus="seleccionarFocoControl"
                                                        MaxLength="6"
                                                        Text="{Binding strNroOrden, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                        TextAlignment="Right"
                                                        ToolTipService.ToolTip="Orden" />
                                                </Grid>
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Column="1"
                                                Label="Liquidación"
                                                LabelPosition="Above">
                                                <A2UTILGEN:A2NumericBox
                                                    HorizontalContentAlignment="Right"
                                                    Maximum="2147483647"
                                                    Minimum="0"
                                                    NumberDecimalDigits="0"
                                                    ShowButtons="False"
                                                    ToolTipService.ToolTip="Liquidación"
                                                    ValueFormat="NoSeparator"
                                                    Value="{Binding lngID, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Column="2"
                                                Label="Tipo"
                                                LabelPosition="Above">
                                                <ComboBox
                                                    DisplayMemberPath="Descripcion"
                                                    ItemsSource="{Binding DiccionarioCombos[tipoLiq], Source={StaticResource A2VM}}"
                                                    SelectedValue="{Binding strTipo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    SelectedValuePath="ID"
                                                    ToolTipService.ToolTip="Tipo" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Column="3"
                                                Label="Clase"
                                                LabelPosition="Above">
                                                <ComboBox
                                                    DisplayMemberPath="Descripcion"
                                                    ItemsSource="{Binding DiccionarioCombos[claseLiq], Source={StaticResource A2VM}}"
                                                    SelectedValue="{Binding strClaseOrden, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    SelectedValuePath="ID"
                                                    ToolTipService.ToolTip="Clase" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Column="4"
                                                Label="Cumplimiento título"
                                                LabelPosition="Above">
                                                <A2UTILGEN:A2DatePicker
                                                    IsTodayHighlighted="True"
                                                    SelectedDate="{Binding dtmCumplimientoTitulo, StringFormat='dd/MMM/yyyy', Mode=TwoWay}"
                                                    ToolTipService.ToolTip="Liquidación" />
                                            </Telerik:DataFormDataField>

                                            <Telerik:DataFormDataField
                                                Grid.Column="5"
                                                Label="Fecha liquidación"
                                                LabelPosition="Above">
                                                <A2UTILGEN:A2DatePicker
                                                    IsTodayHighlighted="True"
                                                    SelectedDate="{Binding dtmLiquidacion, StringFormat='dd/MMM/yyyy', Mode=TwoWay}"
                                                    ToolTipService.ToolTip="Liquidación" />
                                            </Telerik:DataFormDataField>

                                            <!--  BuscadorCliente  -->
                                            <Telerik:DataFormDataField
                                                Grid.Column="6"
                                                Label="Código"
                                                LabelPosition="Above">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBox
                                                        x:Name="IDComitente"
                                                        Grid.Column="0"
                                                        GotFocus="seleccionarFocoControl"
                                                        MaxLength="17"
                                                        Text="{Binding lngIDComitente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                        TextAlignment="Right"
                                                        ToolTipService.ToolTip="Código" />

                                                    <my1:BuscadorClienteListaButon
                                                        Grid.Column="1"
                                                        Margin="2,0,0,0"
                                                        Agrupamiento=""
                                                        CampoBusqueda="IdComitenteBuscar"
                                                        EstadoComitente="T"
                                                        TipoVinculacion="C"
                                                        finalizoBusqueda="BuscadorClienteListaButon_comitenteAsignado" />
                                                    <Button
                                                        x:Name="btnLimpiarCliente"
                                                        Grid.Column="2"
                                                        Margin="2,0,0,0"
                                                        Click="btnLimpiarCliente_Click"
                                                        Style="{StaticResource btnLimpiar}"
                                                        ToolTipService.ToolTip="Limpiar cliente" />
                                                </Grid>

                                            </Telerik:DataFormDataField>

                                            <!--  Datos adicionales al seleccionar el cliente  -->
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="6"
                                                Orientation="Horizontal">
                                                <StackPanel
                                                    Margin="10,0,0,0"
                                                    DataContext="{Binding DataContext.cb.ComitenteSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                                    Orientation="Vertical">
                                                    <TextBlock Text="{Binding Nombre}" />
                                                    <TextBlock Text="{Binding IdComitente, StringFormat='Código OYD \{0}'}" />
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding TipoIdentificacion, StringFormat='\{0} '}" />
                                                        <TextBlock Text="{Binding NroDocumento, StringFormat='N0'}" />
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Categoria}" />
                                                    <TextBlock Text="{Binding Estado}" />
                                                </StackPanel>
                                            </StackPanel>

                                        </Grid>
                                    </DataTemplate>
                                </A2UTILGEN:A2DataForm.EditTemplate>
                            </A2UTILGEN:A2DataForm>

                            <StackPanel
                                x:Name="Editar"
                                HorizontalAlignment="Stretch"
                                Visibility="{Binding visNavegando}">
                                <!--  ============================  -->
                                <!--  Dataform edición de registro  -->
                                <!--  ============================  -->
                                <Grid
                                    x:Name="gridEd"
                                    VerticalAlignment="Top"
                                    DataContext="{Binding EncabezadoSeleccionado}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Grid.Row="0"  -->
                                    <StackPanel
                                        Grid.Row="0"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btnAplazar"
                                            Click="btnAplazar_Click"
                                            Content="Aplazar"
                                            IsEnabled="{Binding DataContext.HabilitaBoton, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Style="{StaticResource ControlButtonSecundaryStyle}"
                                            ToolTipService.ToolTip="Aplazar" />
                                        <Button
                                            x:Name="btnDuplicar"
                                            Click="btnDuplicar_Click"
                                            Content="Duplicar"
                                            IsEnabled="{Binding DataContext.HabilitaBoton, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Style="{StaticResource ControlButtonSecundaryStyle}"
                                            ToolTipService.ToolTip="Duplicar" />
                                    </StackPanel>

                                    <!--  Grid.Row="1"  -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="0"
                                            VerticalAlignment="Top"
                                            IsEnabled="{Binding DataContext.HabilitarRadioButton, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Tipo"
                                            LabelPosition="Above">
                                            <ListBox
                                                BorderThickness="0"
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombos[tipoLiq], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding strTipo, Mode=TwoWay}"
                                                SelectedValuePath="ID">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Vertical" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Grid Background="Transparent">
                                                                        <RadioButton IsChecked="{TemplateBinding IsSelected}" IsHitTestVisible="False">
                                                                            <ContentPresenter />
                                                                        </RadioButton>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="1"
                                            VerticalAlignment="Top"
                                            IsEnabled="{Binding DataContext.HabilitarRadioButton, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Clase"
                                            LabelPosition="Above">
                                            <ListBox
                                                BorderThickness="0"
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombos[claseLiq], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding strClaseOrden, Mode=TwoWay}"
                                                SelectedValuePath="ID">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Vertical" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Grid Background="Transparent">
                                                                        <RadioButton IsChecked="{TemplateBinding IsSelected}" IsHitTestVisible="False">
                                                                            <ContentPresenter />
                                                                        </RadioButton>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="2"
                                            VerticalContentAlignment="Top"
                                            IsEnabled="False"
                                            Label="Manual"
                                            LabelPosition="Above">
                                            <ListBox
                                                Margin="0,-25,0,0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Descripcion"
                                                ItemsSource="{Binding DiccionarioCombos[manualLiq], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding logManual, Converter={StaticResource BooleanoConverterRadio}, Mode=TwoWay}"
                                                SelectedValuePath="ID">
                                                <ListBox.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Vertical" />
                                                    </ItemsPanelTemplate>
                                                </ListBox.ItemsPanel>
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Grid Background="Transparent">
                                                                        <RadioButton IsChecked="{TemplateBinding IsSelected}" IsHitTestVisible="False">
                                                                            <ContentPresenter />
                                                                        </RadioButton>
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                            </ListBox>
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="3"
                                            IsEnabled="{Binding DataContext.HabilitarRadioButton, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Orden"
                                            LabelPosition="Above">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="60*" />
                                                </Grid.ColumnDefinitions>

                                                <A2UTILGEN:A2NumericBox
                                                    Maximum="2147483647"
                                                    Minimum="0"
                                                    ShowButtons="True"
                                                    ToolTipService.ToolTip="IDOrden"
                                                    ValueFormat="NoSeparator"
                                                    Value="{Binding intFechaOrden, Mode=TwoWay}" />
                                                <TextBox
                                                    Grid.Column="1"
                                                    GotFocus="seleccionarFocoControl"
                                                    MaxLength="6"
                                                    Text="{Binding strNroOrden, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                    TextAlignment="Right"
                                                    ToolTipService.ToolTip="Orden" />
                                            </Grid>

                                        </Telerik:DataFormDataField>

                                        <!--  Nro. liquidación  -->
                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="4"
                                            IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Liquidación"
                                            LabelPosition="Above">
                                            <A2UTILGEN:A2NumericBox
                                                HorizontalContentAlignment="Right"
                                                Maximum="2147483647"
                                                Minimum="0"
                                                ShowButtons="False"
                                                ToolTipService.ToolTip="Liquidación"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding lngID, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="5"
                                            IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Parcial"
                                            LabelPosition="Above">
                                            <A2UTILGEN:A2NumericBox
                                                HorizontalContentAlignment="Right"
                                                LostFocus="ValidarLiquidacion"
                                                Maximum="2147483647"
                                                Minimum="-1"
                                                ShowButtons="False"
                                                ToolTipService.ToolTip="Parcial"
                                                ValueFormat="NoSeparator"
                                                Value="{Binding lngParcial, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Row="0"
                                            Grid.Column="6"
                                            IsEnabled="{Binding DataContext.HabilitarFechaLiquidacion, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Liquidación"
                                            LabelPosition="Above">
                                            <A2UTILGEN:A2DatePicker
                                                IsTodayHighlighted="True"

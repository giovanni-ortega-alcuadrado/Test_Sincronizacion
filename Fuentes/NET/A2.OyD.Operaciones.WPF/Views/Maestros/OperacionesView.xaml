                                                                x:Name="chkServBolsaVble"
                                                                Grid.Column="1"
                                                                Width="20"
                                                                Margin="5,0,0,0"
                                                                VerticalAlignment="Center"
                                                                IsChecked="{Binding logTraslado, Mode=TwoWay}"
                                                                IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                        </Grid>
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Label="Total"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            HorizontalContentAlignment="Right"
                                                            NumberDecimalDigits="2"
                                                            ShowButtons="False"
                                                            ToolTipService.ToolTip="Total"
                                                            ValueFormat="Numeric"
                                                            Value="{Binding curTotalLiq, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="2"
                                                        IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Label="Valor extemporáneo"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            HorizontalContentAlignment="Right"
                                                            LostFocus="CalcularValores_LostFocus"
                                                            NumberDecimalDigits="2"
                                                            ShowButtons="False"
                                                            ToolTipService.ToolTip="Valor extemporáneo"
                                                            ValueFormat="Numeric"
                                                            Value="{Binding curValorExtemporaneo, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Row="2"
                                                        Grid.Column="3"
                                                        IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Label="Posición extemporáneo"
                                                        LabelPosition="Above">
                                                        <ComboBox
                                                            DisplayMemberPath="Descripcion"
                                                            ItemsSource="{Binding DiccionarioCombos[POSICIONEXTEMPORANEO], Source={StaticResource A2VM}}"
                                                            SelectedValue="{Binding strPosicionExtemporaneo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                            SelectedValuePath="ID"
                                                            ToolTipService.ToolTip="Posición extemporáneo" />
                                                    </Telerik:DataFormDataField>

                                                </Grid>


                                            </TabItem>

                                            <TabItem
                                                x:Name="TabReceptores"
                                                HorizontalAlignment="Stretch"
                                                Header="Receptores">

                                                <StackPanel Orientation="Vertical">

                                                    <A2Utils:ControlMenuDetalleA2
                                                        x:Name="cmReceptoresOrdenes"
                                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Mensaje="{Binding DataContext.MensajeMVVM, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        NombreDetalle="{Binding DataContext.NombreColeccionDetalle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />

                                                    <A2UTILGEN:A2GridView
                                                        x:Name="dgReceptoresOrdenes"
                                                        Height="150"
                                                        VerticalAlignment="Top"
                                                        AutoGenerateColumns="False"
                                                        FrozenColumnCount="1"
                                                        IsHitTestVisible="{Binding Editando}"
                                                        ItemsSource="{Binding DataContext.ListaOperacionesReceptores, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                        SelectedItem="{Binding DataContext.ReceptoresOrdenesSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        ValidatesOnDataErrors="None">

                                                        <A2UTILGEN:A2GridView.Columns>
                                                            <!--  SelectedItem="{Binding DataContext.DiasCalendariosNormaSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"  -->

                                                            <Telerik:GridViewDataColumn Header="Código">
                                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox
                                                                                Width="135"
                                                                                IsEnabled="False"
                                                                                MaxLength="17"
                                                                                Text="{Binding strIDReceptor, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </Telerik:GridViewDataColumn.CellTemplate>
                                                            </Telerik:GridViewDataColumn>

                                                            <Telerik:GridViewDataColumn>
                                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <my1:BuscadorGenericoListaButon
                                                                            CampoBusqueda="IDReceptor"
                                                                            Etiqueta="Lista de receptores"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            TipoItem="receptores"
                                                                            finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                                                                    </DataTemplate>
                                                                </Telerik:GridViewDataColumn.CellTemplate>
                                                            </Telerik:GridViewDataColumn>

                                                            <Telerik:GridViewDataColumn Header="Líder">
                                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <CheckBox
                                                                            Margin="20,0,0,0"
                                                                            VerticalAlignment="Center"
                                                                            IsChecked="{Binding logLider, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                                    </DataTemplate>
                                                                </Telerik:GridViewDataColumn.CellTemplate>
                                                            </Telerik:GridViewDataColumn>

                                                            <Telerik:GridViewDataColumn Header="Porcentaje">
                                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <A2UTILGEN:A2NumericBox
                                                                            Width="60"
                                                                            IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                            Maximum="100"
                                                                            Minimum="0"
                                                                            NumberDecimalDigits="2"
                                                                            ShowButtons="False"
                                                                            ValueFormat="Numeric"
                                                                            Value="{Binding dblPorcentaje, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                    </DataTemplate>
                                                                </Telerik:GridViewDataColumn.CellTemplate>
                                                            </Telerik:GridViewDataColumn>

                                                            <Telerik:GridViewDataColumn Header="Nombre">
                                                                <Telerik:GridViewDataColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBox
                                                                            Width="135"
                                                                            IsEnabled="False"
                                                                            MaxLength="50"
                                                                            Text="{Binding strNombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" />
                                                                    </DataTemplate>
                                                                </Telerik:GridViewDataColumn.CellTemplate>
                                                            </Telerik:GridViewDataColumn>

                                                        </A2UTILGEN:A2GridView.Columns>

                                                    </A2UTILGEN:A2GridView>

                                                </StackPanel>

                                            </TabItem>

                                            <TabItem
                                                x:Name="TabBeneficiarios"
                                                HorizontalAlignment="Stretch"
                                                Header="Beneficiarios">

                                                <StackPanel Orientation="Vertical">

                                                    <A2UTILGEN:A2GridView
                                                        x:Name="dgBeneficiariosOrdenes"
                                                        Height="180"
                                                        VerticalAlignment="Top"
                                                        AutoGenerateColumns="False"
                                                        IsHitTestVisible="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        IsReadOnly="True"
                                                        ItemsSource="{Binding DataContext.ListaOperacionesBeneficiarios, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                        SelectedItem="{Binding DataContext.BeneficiariosOrdenesSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        ValidatesOnDataErrors="None">
                                                        <A2UTILGEN:A2GridView.Columns>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strNombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Nombre" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strTipoIdentificacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Documento" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngNroDocumento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Número" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strParentesco, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Parentesco" />
                                                        </A2UTILGEN:A2GridView.Columns>

                                                    </A2UTILGEN:A2GridView>

                                                </StackPanel>

                                            </TabItem>

                                            <TabItem
                                                x:Name="TabEspecies"
                                                HorizontalAlignment="Stretch"
                                                Header="Especies">

                                                <StackPanel Orientation="Vertical">

                                                    <A2UTILGEN:A2GridView
                                                        x:Name="dgEspeciesLiquidaciones"
                                                        Height="180"
                                                        VerticalAlignment="Top"
                                                        AutoGenerateColumns="False"
                                                        IsHitTestVisible="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        IsReadOnly="True"
                                                        ItemsSource="{Binding DataContext.ListaOperacionesEspecies, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                        SelectedItem="{Binding EspeciesLiquidacionesSelected.Editando, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        ValidatesOnDataErrors="None">
                                                        <A2UTILGEN:A2GridView.Columns>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strIDEspecie, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Nemotécnico" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strNombre, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Nombre" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Mercado" />
                                                        </A2UTILGEN:A2GridView.Columns>

                                                    </A2UTILGEN:A2GridView>

                                                </StackPanel>

                                            </TabItem>

                                            <TabItem
                                                x:Name="TabAplazamientos"
                                                HorizontalAlignment="Stretch"
                                                Header="Aplazamientos">

                                                <StackPanel Orientation="Vertical">

                                                    <A2UTILGEN:A2GridView
                                                        x:Name="dgAplazamientosLiquidaciones"
                                                        Height="180"
                                                        VerticalAlignment="Top"
                                                        AutoGenerateColumns="False"
                                                        IsHitTestVisible="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        IsReadOnly="True"
                                                        ItemsSource="{Binding DataContext.ListaOperacionesAplazamientos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                        SelectedItem="{Binding DataContext.AplazamientosLiquidacionesSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        ValidatesOnDataErrors="None">
                                                        <A2UTILGEN:A2GridView.Columns>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strAplazamiento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Aplazamiento" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding dtmCumplimiento, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Cumplimiento" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding dtmActualizacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Actualización" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strUsuario, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Usuario" />
                                                        </A2UTILGEN:A2GridView.Columns>

                                                    </A2UTILGEN:A2GridView>

                                                </StackPanel>

                                            </TabItem>

                                            <TabItem
                                                x:Name="TabOtros"
                                                HorizontalAlignment="Stretch"
                                                Header="Otros">

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <Telerik:DataFormDataField
                                                        Grid.Column="0"
                                                        IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Label="Valor entrega contrapago"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            HorizontalContentAlignment="Right"
                                                            Maximum="9999999999"
                                                            ShowButtons="False"
                                                            ToolTipService.ToolTip="Valor entrega contrapago"
                                                            Value="{Binding dblValorEntregaContraPago, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                                    </Telerik:DataFormDataField>

                                                    <Telerik:DataFormDataField
                                                        Grid.Column="1"
                                                        IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Label="A quien se envía la retención"
                                                        LabelPosition="Above">
                                                        <ComboBox
                                                            DisplayMemberPath="Descripcion"
                                                            ItemsSource="{Binding DiccionarioCombos[Enviaretencion], Source={StaticResource A2VM}}"
                                                            SelectedValue="{Binding strAquienSeEnviaRetencion, Mode=TwoWay}"
                                                            SelectedValuePath="ID"
                                                            ToolTipService.ToolTip="A quien se envía la retención" />
                                                    </Telerik:DataFormDataField>

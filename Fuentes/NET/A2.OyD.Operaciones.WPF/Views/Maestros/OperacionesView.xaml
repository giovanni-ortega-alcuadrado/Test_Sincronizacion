                                                    <Telerik:DataFormDataField
                                                        Grid.Column="2"
                                                        IsEnabled="{Binding DataContext.HabilitarCamposEspecificos, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Label="Número swap"
                                                        LabelPosition="Above">
                                                        <A2UTILGEN:A2NumericBox
                                                            HorizontalContentAlignment="Right"
                                                            Maximum="999"
                                                            ShowButtons="False"
                                                            ToolTipService.ToolTip="Número swap"
                                                            ValueFormat="NoSeparator"
                                                            Value="{Binding lngNroSwap, Mode=TwoWay, ValidatesOnExceptions=True}" />
                                                    </Telerik:DataFormDataField>

                                                </Grid>

                                            </TabItem>

                                            <TabItem
                                                x:Name="TabCustodias"
                                                HorizontalAlignment="Stretch"
                                                Header="Custodias">

                                                <StackPanel Orientation="Vertical">

                                                    <A2UTILGEN:A2GridView
                                                        x:Name="dgCustodiasLiquidaciones"
                                                        Height="180"
                                                        VerticalAlignment="Top"
                                                        AutoGenerateColumns="False"
                                                        IsHitTestVisible="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        IsReadOnly="True"
                                                        ItemsSource="{Binding DataContext.ListaOperacionesCustodias, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                        SelectedItem="{Binding DataContext.CustodiasLiquidacionesSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                        ValidatesOnDataErrors="None">
                                                        <A2UTILGEN:A2GridView.Columns>
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngIdRecibo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Custodia" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding lngSecuencia, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Secuencia" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strEstado, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Estado Custodia" />
                                                            <Telerik:GridViewDataColumn DataMemberBinding="{Binding strEstadoActual, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Header="Estado Título" />
                                                        </A2UTILGEN:A2GridView.Columns>

                                                    </A2UTILGEN:A2GridView>

                                                </StackPanel>

                                            </TabItem>

                                        </TabControl>
                                    </Border>

                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Telerik:RadBusyIndicator>
</UserControl>





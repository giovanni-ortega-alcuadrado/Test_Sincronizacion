<Window
    x:Class="wcInstruccionesEditar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    Title="Editar instrucción"
    Width="400"
    Height="300"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow">

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Margin="20">
            <StackPanel Margin="0,3" Orientation="Horizontal">
                <Label Width="90" Content="Instrucción de pago:" />
                <ComboBox
                    x:Name="cboInstruccion"
                    Width="500"
                    ItemTemplate="{Binding Instruccion, Mode=TwoWay}"
                    SelectedValue="{Binding IdInstruccion, Mode=TwoWay}"
                    SelectionChanged="cambioInstruccion" />
            </StackPanel>
        </Border>

        <Border Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Label Content="Controles según instrucción:" />
            </Grid>
        </Border>

        <Button
            x:Name="CancelButton"
            Grid.Row="1"
            Width="75"
            Height="23"
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Content="Cancel" />
        <Button
            x:Name="OKButton"
            Grid.Row="1"
            Width="75"
            Height="23"
            Margin="0,12,79,0"
            HorizontalAlignment="Right"
            Content="OK" />
    </Grid>
</Window>

<UserControl
    x:Class="ImportarRecibosCajaRecaudosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:my="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="200"
    MaxWidth="800"
    d:DesignHeight="400"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Telerik:RadBusyIndicator
        Name="BI"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        BusyContent="Procesando, por favor espere..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid
            x:Name="LayoutRoot"
            Width="800"
            Height="Auto"
            MaxWidth="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="5,0,0,0"
                VerticalAlignment="Top"
                Style="{StaticResource Title1}"
                Text="Importar recibos de caja recaudos" />


            <Border
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center">
                <Button
                    Name="btnAceptar"
                    Width="90"
                    Height="22"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="btnAceptar_Click"
                    Content="Cargar recibos" />
            </Border>

            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Background="White">

                <Grid Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="800" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="320" />
                            <ColumnDefinition Width="60" />

                        </Grid.ColumnDefinitions>
                        <Telerik:DataFormDataField
                            Grid.Column="0"
                            Label="Banco"
                            LabelPosition="Above">
                            <A2UTILGEN:A2TextBox
                                x:Name="txtBanco"
                                LostFocus="txtBanco_LostFocus"
                                MaxLength="9"
                                Text="{Binding intCodigoBanco, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                TextAlignment="Right"
                                TipoExpresion="SoloNumeros"
                                ToolTipService.ToolTip="Banco" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Column="1"
                            Width="350"
                            HorizontalAlignment="Left"
                            Label=" "
                            LabelPosition="Above">
                            <TextBox
                                IsEnabled="False"
                                Text="{Binding strNombreBanco, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                ToolTipService.ToolTip="Nombre banco" />
                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Column="2"
                            Label=" "
                            LabelPosition="Above">
                            <my:BuscadorGenericoListaButon
                                HorizontalAlignment="Left"
                                CampoBusqueda="IDBanco"
                                EstadoItem="A"
                                Etiqueta="Lista de Bancos"
                                TipoItem="cuentasbancarias"
                                finalizoBusqueda="BuscadorGenerico_finalizoBusqueda" />
                        </Telerik:DataFormDataField>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="AUTO" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Telerik:DataFormDataField
                            Grid.Column="0"
                            Label="Archivo"
                            LabelPosition="Above">

                            <TextBox
                                Name="cbArchivosASubir"
                                Width="470"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                IsReadOnly="True"
                                Text="{Binding strNombrearchivo}"
                                TextWrapping="Wrap" />

                        </Telerik:DataFormDataField>
                        <Telerik:DataFormDataField
                            Grid.Column="1"
                            Label=" "
                            LabelPosition="Above">
                            <my:ucBtnDialogoImportar
                                x:Name="ucbtnCargar"
                                Width="170"
                                Height="25"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Filtros="Archivos de texto (*.txt)|*.txt" />
                        </Telerik:DataFormDataField>
                    </Grid>
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="50,10,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal" />
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="50,10,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal" />

                    <Border
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        Style="{StaticResource Contenedor_Paginador}">
                        <A2UTILGEN:A2DataPager
                            Name="DataPager1"
                            Height="24"
                            PageSize="10"
                            Source="{Binding ItemsSource, ElementName=dgArchivos}" />
                    </Border>

                    <A2UTILGEN:A2GridView
                        x:Name="dgArchivos"
                        Grid.Row="3"
                        Grid.Column="0"
                        MinHeight="200"
                        HorizontalAlignment="Stretch"
                        AutoGenerateColumns="False"
                        IsReadOnly="False"
                        ItemsSource="{Binding ListaArchivosGuardadosPaged}"
                        ValidatesOnDataErrors="None">
                        <A2UTILGEN:A2GridView.Columns>
                            <Telerik:GridViewDataColumn Header="">
                                <Telerik:GridViewDataColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Click="Button_Click"
                                            Content="Borrar"
                                            Tag="{Binding Ruta}"
                                            ToolTipService.ToolTip="Borrar el Archivo" />
                                    </DataTemplate>
                                </Telerik:GridViewDataColumn.CellTemplate>
                            </Telerik:GridViewDataColumn>
                            <Telerik:GridViewDataColumn Header="Nombre" SortMemberPath="Nombre">
                                <Telerik:GridViewDataColumn.CellTemplate>
                                    <DataTemplate>
                                        <my:ucDescargarArchivo
                                            Margin="5,0,5,0"
                                            VerticalAlignment="Center"
                                            ExtensionArchivo="{Binding Extension}"
                                            NombreArchivo="{Binding Nombre}"
                                            URLArchivo="{Binding RutaWeb}" />
                                    </DataTemplate>
                                </Telerik:GridViewDataColumn.CellTemplate>
                            </Telerik:GridViewDataColumn>
                            <Telerik:GridViewDataColumn
                                Width="150"
                                DataMemberBinding="{Binding FechaHora}"
                                Header="Fecha"
                                IsReadOnly="True" />
                            <Telerik:GridViewDataColumn
                                Width="80"
                                DataMemberBinding="{Binding KBytes}"
                                Header="KBytes"
                                IsReadOnly="True" />
                        </A2UTILGEN:A2GridView.Columns>
                    </A2UTILGEN:A2GridView>

                </Grid>
            </StackPanel>
        </Grid>
    </Telerik:RadBusyIndicator>

</UserControl>

<Window
    x:Class="cwCargaArchivos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    Title="Carga de archivos"
    Width="Auto"
    Height="Auto"
    MinWidth="200"
    MaxWidth="650"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow">

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        BusyContent="Procesando archivo..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid
            x:Name="LayoutRoot"
            MaxWidth="650"
            Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                HorizontalAlignment="Left"
                Content="{Binding NombreArchivo}" />

            <ScrollViewer
                Grid.Row="1"
                Width="620"
                Height="400"
                HorizontalAlignment="Stretch"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <ListBox HorizontalAlignment="Stretch" ItemsSource="{Binding ListaMensajes}" />
            </ScrollViewer>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnExportar"
                    Grid.Column="0"
                    Width="60"
                    HorizontalAlignment="Right"
                    Click="btnExportar_Click"
                    Content="Exportar"
                    Style="{StaticResource btnGenerico}" />

                <Button
                    x:Name="btnCerrar"
                    Grid.Column="1"
                    Width="60"
                    HorizontalAlignment="Left"
                    Click="btnCerrar_Click"
                    Content="Cerrar"
                    Style="{StaticResource btnGenerico}" />

            </Grid>



        </Grid>
    </Telerik:RadBusyIndicator>
</Window>

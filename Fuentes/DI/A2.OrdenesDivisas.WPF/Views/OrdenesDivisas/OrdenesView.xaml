<UserControl
    x:Class="OrdenesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2Utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Persona="clr-namespace:A2PersonasWPF;assembly=A2.Personas.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:global="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:A2OrdenesDivisasWPF"
    MinWidth="800"
    MinHeight="500"
    Padding="10"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    mc:Ignorable="d">

    <UserControl.Resources>
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:BooleanNumeroConverter x:Key="BooleanConverter" />
    </UserControl.Resources>

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">

        <Grid x:Name="LayoutRoot" ShowGridLines="False">
            <Grid.RowDefinitions>
                <!--  Fila ControlMenu  -->
                <RowDefinition Height="Auto" MinHeight="20" />
                <!--  Fila forma/grid  -->
                <RowDefinition Height="Auto" MinHeight="43" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <!--  ControlMenu  -->
            <Border Grid.Row="0" Margin="0,5,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <A2Utils:ControlMenuA2
                        x:Name="cm"
                        Margin="0"
                        DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                        DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                        EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                        Filtro="{Binding FiltroVM, Mode=TwoWay}"
                        HayDataForm="False"
                        IsItemValid="True"
                        Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                        MensajeError="{Binding ErrorForma}"
                        Modo="{Binding ModoMVVM, Mode=TwoWay}"
                        ObjetoSeleccionado="{Binding EncabezadoSeleccionado}"
                        PreguntarConfirmacion="False"
                        TextoFiltroTooltip="{Binding DataContext.DiccionarioEtiquetasPantalla[FILTRO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        TituloVista="{Binding DataContext.DiccionarioEtiquetasPantalla[TITULO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        TituloVistaAdicional="registros"
                        TituloVista_CambioSelected="{Binding EncabezadoSeleccionado.HasChanges}"
                        TituloVista_CantidadRegistros="{Binding ListaEncabezado.Count}" />


                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        Style="{StaticResource stpFiltro}">
                        <Button
                            x:Name="cmdRefrescar"
                            Click="cmdRefrescar_Click"
                            Content="Refrescar"
                            IsEnabled="True"
                            Style="{StaticResource ControlButtonSecundaryStyle}"
                            ToolTipService.ToolTip="Consultar la orden activa" />
                    </StackPanel>

                </Grid>
            </Border>
            <!--  /ControlMenu  -->



            <Border Grid.Row="1" Style="{StaticResource Contenedor_Estilo}">
                <Grid x:Name="grdGridForma">
                    <!--  ====================  -->
                    <!--  Controles de contenido  -->
                    <!--  ====================  -->
                    <Border>
                        <!--  ===========================  -->
                        <!--  Grid de navegación paginada  -->
                        <!--  ===========================  -->
                        <StackPanel
                            x:Name="Buscar"
                            Grid.Column="0"
                            Width="Auto"
                            Height="Auto"
                            VerticalAlignment="Top">

                            <Border Style="{StaticResource Contenedor_Paginador}">
                                <A2UTILGEN:A2DataPager
                                    x:Name="datapager1"
                                    PageSize="14"
                                    Source="{Binding Items, ElementName=dg}" />
                            </Border>

                            <A2UTILGEN:A2GridView
                                x:Name="dg"
                                Height="Auto"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                FrozenColumnCount="2"
                                IsReadOnly="True"
                                ItemsSource="{Binding ListaEncabezadoPaginada}"
                                SelectedItem="{Binding EncabezadoSeleccionado, Mode=TwoWay}">

                                <Telerik:RadGridView.Columns>
                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Click="NavegarAForma"
                                                    Content="{Binding intID, Mode=TwoWay}"
                                                    Style="{StaticResource HyperlinkLikeButton}"
                                                    Tag="{Binding intID}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding intConsecutivo}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />


                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding intVersion}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox
                                                    BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DataContext.dicCombosGeneral[PRODUCTO_NEGOCIACION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding strProducto, Mode=TwoWay}"
                                                    SelectedValuePath="Retorno" />

                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>


                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox
                                                    BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DataContext.dicCombosGeneral[TIPOSOPERACION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding strTipo, Mode=TwoWay}"
                                                    SelectedValuePath="Retorno" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>


                                    <Telerik:GridViewDataColumn
                                        Width="20"
                                        DataMemberBinding="{Binding dtmOrden, StringFormat='dd MMM, yyyy'}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAORDEN].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True"
                                        SortMemberPath="dtmFecha" />

                                    <Telerik:GridViewDataColumn
                                        Width="100"
                                        DataMemberBinding="{Binding dtmVigenciaHasta, StringFormat='dd MMM, yyyy'}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAVIGENCIAHASTA].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True"
                                        SortMemberPath="dtmFecha" />


                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding intIDComitente}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[COMITENTE].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />


                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[ESTADO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox
                                                    BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[ESTADO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DataContext.dicCombosGeneral[ESTADOSGENERALES], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding strEstado, Mode=TwoWay}"
                                                    SelectedValuePath="Retorno" />

                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding dtmEstado, StringFormat='dd MMM, yyyy'}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAESTADO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True"
                                        SortMemberPath="dtmFecha" />

                                </Telerik:RadGridView.Columns>
                            </A2UTILGEN:A2GridView>
                        </StackPanel>
                    </Border>

                    <Border VerticalAlignment="Top">
                        <Grid>
                            <!--  ====================  -->
                            <!--  Dataform de búsqueda  -->
                            <!--  ====================  -->
                            <A2UTILGEN:A2DataForm
                                x:Name="dfBuscar"
                                VerticalAlignment="Top"
                                AutoEdit="True"
                                AutoGenerateFields="False"
                                BorderThickness="0"
                                CommandButtonsVisibility="None"
                                CurrentItem="{Binding cb}"
                                Visibility="{Binding visBuscando}">
                                <Telerik:RadDataForm.EditTemplate>
                                    <DataTemplate>

                                        <StackPanel Orientation="Vertical">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="0"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox Text="{Binding intID, Mode=TwoWay}" TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="1"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox Text="{Binding intConsecutivo, Mode=TwoWay}" TextAlignment="Left" />
                                                </Telerik:DataFormDataField>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="2"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox Text="{Binding intVersion, Mode=TwoWay}" TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="3"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.dicCombosGeneral[PRODUCTO_NEGOCIACION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding strProducto, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="4"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.dicCombosGeneral[TIPOSOPERACION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding strTipo, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>
                                            </Grid>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="0"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[COMITENTE].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[COMITENTE].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[COMITENTE].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        IsReadOnly="True"
                                                        Text="{Binding strNombre, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField Grid.Column="1">
                                                    <Persona:BuscadorClienteListaButon RolPersona="Comitente" finalizoBusqueda="BuscadorClienteListaButon_finalizoBusqueda_busquedaavanzada" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="2"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAORDEN].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAORDEN].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAORDEN].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <Telerik:RadDateTimePicker
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAORDEN].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        Culture="en-CA"
                                                        DateTimeWatermarkContent="{Binding DataContext.DiccionarioEtiquetasPantalla[INGRESEFECHA].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedDate="{Binding dtmOrden, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="3"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[ESTADO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[ESTADO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[ESTADO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[ESTADO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="strDescripcion"
                                                        ItemsSource="{Binding DataContext.lstEstados, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding strEstado, Mode=TwoWay}"
                                                        SelectedValuePath="strRetorno" />

                                                </Telerik:DataFormDataField>

                                            </Grid>

                                        </StackPanel>

                                    </DataTemplate>
                                </Telerik:RadDataForm.EditTemplate>
                            </A2UTILGEN:A2DataForm>

                            <ScrollViewer
                                Grid.Row="1"
                                Grid.Column="1"
                                CanContentScroll="True"
                                VerticalScrollBarVisibility="Auto"
                                Visibility="{Binding visNavegando}">
                                <!--  ============================  -->
                                <!--  Dataform edición de registro  -->
                                <!--  ============================  -->

                                <StackPanel DataContext="{Binding EncabezadoEdicionSeleccionado}" Orientation="Vertical">

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="0*" />
                                            <ColumnDefinition Width="2*" />
                                            <!--<ColumnDefinition Width="2*" /> TIPOCONTRAPARTE --> 
                                        </Grid.ColumnDefinitions>


                                        <Telerik:DataFormDataField
                                            Grid.Column="0"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <TextBox
                                                IsEnabled="False"
                                                Text="{Binding intID, Mode=TwoWay}"
                                                TextAlignment="Left" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Grid.Column="1"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[CONSECUTIVO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <TextBox
                                                IsEnabled="False"
                                                Text="{Binding intConsecutivo, Mode=TwoWay}"
                                                TextAlignment="Left" />
                                        </Telerik:DataFormDataField>


                                        <Telerik:DataFormDataField
                                            Grid.Column="2"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[VERSION].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <TextBox
                                                IsEnabled="False"
                                                Text="{Binding intVersion, Mode=TwoWay}"
                                                TextAlignment="Left" />
                                        </Telerik:DataFormDataField>


                                        <Telerik:DataFormDataField
                                            Grid.Column="3"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <ComboBox
                                                BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[PRODUCTO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                DisplayMemberPath="Descripcion"
                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                ItemsSource="{Binding DataContext.dicCombosGeneral[PRODUCTO_NEGOCIACION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding strProducto, Mode=TwoWay}"
                                                SelectedValuePath="Retorno" />
                                        </Telerik:DataFormDataField>


                                        <Telerik:DataFormDataField
                                            Grid.Column="4"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                            <ComboBox
                                                BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOORDEN].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                DisplayMemberPath="Descripcion"
                                                IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                ItemsSource="{Binding DataContext.dicCombosProducto[TIPOSOPERACION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding strTipo, Mode=TwoWay}"
                                                SelectedValuePath="Retorno" />
                                        </Telerik:DataFormDataField>


                                        
                                        <Telerik:DataFormDataField  
                                            Grid.Column="5"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPODERIVADO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPODERIVADO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPODERIVADO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                            <ComboBox
                                                BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPODERIVADO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                DisplayMemberPath="Descripcion"
                                                IsEnabled="{Binding DataContext.HabilitarForward, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                ItemsSource="{Binding DataContext.dicCombosProducto[TIPODERIVADO], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding strTipoDerivado, Mode=TwoWay}"
                                                SelectedValuePath="Retorno" />

                                        </Telerik:DataFormDataField>
                                        
                                        <Telerik:DataFormDataField
                                            Grid.Column="6"
                                            Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOOPERACION].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOOPERACION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            LabelPosition="Above"
                                            ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOOPERACION].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                            <ComboBox
                                                BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[TIPOOPERACION].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                DisplayMemberPath="Descripcion"

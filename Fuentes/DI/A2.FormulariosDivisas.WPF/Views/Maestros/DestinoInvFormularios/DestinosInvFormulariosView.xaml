<UserControl
    x:Class="DestinosInvFormulariosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2Utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:global="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:A2FormulariosDivisasWPF"
    MinWidth="800"
    MinHeight="500"
    Padding="10"
    d:DesignHeight="768"
    d:DesignWidth="1366"
    mc:Ignorable="d">

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">

        <Grid x:Name="LayoutRoot" ShowGridLines="False">
            <Grid.RowDefinitions>
                <!--  Fila ControlMenu  -->
                <RowDefinition Height="Auto" MinHeight="20" />
                <!--  Fila forma/grid  -->
                <RowDefinition Height="Auto" MinHeight="43" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  ControlMenu  -->
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,5,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <A2Utils:ControlMenuA2
                        x:Name="cm"
                        Margin="0"
                        DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                        DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                        EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                        Filtro="{Binding FiltroVM, Mode=TwoWay}"
                        HayDataForm="False"
                        IsItemValid="True"
                        Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                        MensajeError="{Binding ErrorForma}"
                        Modo="{Binding ModoMVVM, Mode=TwoWay}"
                        ObjetoSeleccionado="{Binding EncabezadoSeleccionado}"
                        PreguntarConfirmacion="False"
                        TextoFiltroTooltip="{Binding DataContext.DiccionarioEtiquetasPantalla[FILTRO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        TituloVista="{Binding DataContext.DiccionarioEtiquetasPantalla[TITULO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        TituloVistaAdicional="registros"
                        TituloVista_CambioSelected="{Binding EncabezadoSeleccionado.HasChanges}"
                        TituloVista_CantidadRegistros="{Binding ListaEncabezado.Count}" />


                </Grid>
            </Border>
            <!--  /ControlMenu  -->

            <Border Grid.Row="1" Style="{StaticResource Contenedor_Estilo}">
                <Grid x:Name="grdGridForma">
                    <!--  ====================  -->
                    <!--  Controles de contenido  -->
                    <!--  ====================  -->
                    <Border>
                        <!--  ===========================  -->
                        <!--  Grid de navegación paginada  -->
                        <!--  ===========================  -->
                        <StackPanel
                            x:Name="Buscar"
                            Grid.Column="0"
                            Width="Auto"
                            Height="Auto"
                            VerticalAlignment="Top">

                            <Border Style="{StaticResource Contenedor_Paginador}">
                                <A2UTILGEN:A2DataPager
                                    x:Name="datapager1"
                                    PageSize="14"
                                    Source="{Binding Items, ElementName=dg}" />
                            </Border>

                            <A2UTILGEN:A2GridView
                                x:Name="dg"
                                Height="Auto"
                                VerticalAlignment="Top"
                                AutoGenerateColumns="False"
                                FrozenColumnCount="2"
                                IsReadOnly="True"
                                ItemsSource="{Binding ListaEncabezadoPaginada}"
                                SelectedItem="{Binding EncabezadoSeleccionado, Mode=TwoWay}">

                                <Telerik:RadGridView.Columns>
                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    VerticalAlignment="Center"
                                                    Click="NavegarAForma"
                                                    Content="{Binding intId, Mode=TwoWay}"
                                                    Style="{StaticResource HyperlinkLikeButton}"
                                                    Tag="{Binding intId}" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>


                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>

                                                <Telerik:RadComboBox
                                                    BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[FORMULARIOS], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding intIdFormulario, Mode=TwoWay}"
                                                    SelectedValuePath="Retorno" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>


                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>

                                                <Telerik:RadComboBox
                                                    BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[NUMERALES], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding intIdNumeralCambiario, Mode=TwoWay}"
                                                    SelectedValuePath="Retorno" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn Header="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                        <Telerik:GridViewDataColumn.CellTemplate>
                                            <DataTemplate>

                                                <Telerik:RadComboBox
                                                    BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    DisplayMemberPath="Descripcion"
                                                    IsEnabled="False"
                                                    ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[DESTINOSINVERSION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    SelectedValue="{Binding intIdDestinoInversion, Mode=TwoWay}"
                                                    SelectedValuePath="Retorno" />
                                            </DataTemplate>
                                        </Telerik:GridViewDataColumn.CellTemplate>
                                    </Telerik:GridViewDataColumn>

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding strGrupoFormulario}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding intNroCampoFormulario}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMEROCAMPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding strNombreCampo}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding strNombreCampoFormulario}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />



                                    <Telerik:GridViewCheckBoxColumn
                                        DataMemberBinding="{Binding logEditable}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[EDITABLE].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />

                                    <Telerik:GridViewCheckBoxColumn
                                        DataMemberBinding="{Binding logEsRequerido}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[REQUERIDO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />


                                    <Telerik:GridViewCheckBoxColumn
                                        DataMemberBinding="{Binding logPermitido}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[PERMITIDO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />



                                    <Telerik:GridViewCheckBoxColumn
                                        DataMemberBinding="{Binding logAplicatodosDestinosInversion}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[APLICATODOSDESTINOSINVERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />


                                    <Telerik:GridViewCheckBoxColumn
                                        DataMemberBinding="{Binding logAplicatodosFormularios}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[APLICATODOSFORMULARIOS].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />


                                    <Telerik:GridViewCheckBoxColumn
                                        DataMemberBinding="{Binding logAplicatodosNumerales}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[APLICATODOSNUMERALES].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />




                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding strUsuario}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[USUARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True" />


                                    <Telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding dtmActualizacion, StringFormat='dd MMM, yyyy'}"
                                        Header="{Binding DataContext.DiccionarioEtiquetasPantalla[FECHAACTUALIZACION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        IsReadOnly="True"
                                        SortMemberPath="dtmActualizacion" />




                                </Telerik:RadGridView.Columns>
                            </A2UTILGEN:A2GridView>
                        </StackPanel>
                    </Border>

                    <Border VerticalAlignment="Top">
                        <Grid>
                            <!--  ====================  -->
                            <!--  Dataform de búsqueda  -->
                            <!--  ====================  -->
                            <A2UTILGEN:A2DataForm
                                x:Name="dfBuscar"
                                VerticalAlignment="Top"
                                AutoEdit="True"
                                AutoGenerateFields="False"
                                BorderThickness="0"
                                CommandButtonsVisibility="None"
                                CurrentItem="{Binding cb}"
                                Visibility="{Binding visBuscando}">
                                <Telerik:RadDataForm.EditTemplate>
                                    <DataTemplate>

                                        <Grid VerticalAlignment="Top">

                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="4*" />
                                                    <ColumnDefinition Width="4*" />
                                                </Grid.ColumnDefinitions>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="0"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox Text="{Binding intId, Mode=TwoWay}" TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="1"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[FORMULARIOS], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intIdFormulario, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="2"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[NUMERALES], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intIdNumeralCambiario, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>

                                            </Grid>


                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                </Grid.ColumnDefinitions>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="0"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[DESTINOSINVERSION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intIdDestinoInversion, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="1"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        MaxLength="5"
                                                        Text="{Binding strGrupoFormulario, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="2"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMEROCAMPOFORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMEROCAMPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMEROCAMPOFORMULARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        MaxLength="5"
                                                        Text="{Binding intNroCampoFormulario, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="3"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        MaxLength="50"
                                                        Text="{Binding strNombreCampo, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="4"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPOFORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[NOMBRECAMPOFORMULARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        MaxLength="50"
                                                        Text="{Binding strNombreCampoFormulario, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>


                                            </Grid>
                                        </Grid>

                                    </DataTemplate>
                                </Telerik:RadDataForm.EditTemplate>
                            </A2UTILGEN:A2DataForm>

                            <ScrollViewer
                                Grid.Row="1"
                                Grid.Column="1"
                                CanContentScroll="True"
                                VerticalScrollBarVisibility="Auto"
                                Visibility="{Binding visNavegando}">
                                <!--  ============================  -->
                                <!--  Dataform edición de registro  -->
                                <!--  ============================  -->


                                <Border BorderThickness="0">

                                    <StackPanel DataContext="{Binding EncabezadoEdicionSeleccionado}" Orientation="Vertical">

                                        <StackPanel
                                            x:Name="gridEd23"
                                            Grid.Row="0"
                                            Margin="10,0,0,0"
                                            Orientation="Vertical">


                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="4*" />
                                                    <ColumnDefinition Width="4*" />

                                                </Grid.ColumnDefinitions>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="0"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[ID].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        IsEnabled="False"
                                                        Text="{Binding intId, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="1"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[FORMULARIO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[FORMULARIOS], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intIdFormulario, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="2"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMERALCAMBIARIO].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[NUMERALES], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intIdNumeralCambiario, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>

                                            </Grid>


                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="6*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />
                                                    <ColumnDefinition Width="2*" />

                                                </Grid.ColumnDefinitions>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="0"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">

                                                    <ComboBox
                                                        BorderBrush="{Binding DataContext.DiccionarioEtiquetasPantalla[DESTINOINVERSION].Color, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        DisplayMemberPath="Descripcion"
                                                        ItemsSource="{Binding DataContext.DiccionarioCombosPantalla[DESTINOSINVERSION], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intIdDestinoInversion, Mode=TwoWay}"
                                                        SelectedValuePath="Retorno" />
                                                </Telerik:DataFormDataField>


                                                <Telerik:DataFormDataField
                                                    Grid.Column="1"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"
                                                    ToolTipService.ToolTip="{Binding DataContext.DiccionarioEtiquetasPantalla[GRUPOFORMULARIO].Tooltip, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <TextBox
                                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        MaxLength="5"
                                                        Text="{Binding strGrupoFormulario, Mode=TwoWay}"
                                                        TextAlignment="Left" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField
                                                    Grid.Column="2"
                                                    Foreground="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMEROCAMPOFORMULARIO].ColorLetra, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Label="{Binding DataContext.DiccionarioEtiquetasPantalla[NUMEROCAMPOFORMULARIO].Titulo, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    LabelPosition="Above"

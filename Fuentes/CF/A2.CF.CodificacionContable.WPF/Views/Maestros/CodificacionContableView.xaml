<UserControl
    x:Class="CodificacionContableView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:A2UTILGEN="clr-namespace:A2Utilidades;assembly=A2.Controles.Utilidades.WPF"
    xmlns:A2Utils="clr-namespace:A2ControlMenu;assembly=A2ControlMenu.WPF"
    xmlns:Telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:src="clr-namespace:A2CFCodificacionContable"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    MinWidth="450"
    MaxWidth="1100">
    <!--  xmlns:Controles="clr-namespace:A2ComunesControl;assembly=A2.OYD.Control.WPF"  -->

    <UserControl.Resources>
        <src:DisplayNameConverter x:Key="DisplayConverter" />
        <src:VisibilityConverter x:Key="VisibilityConverter" />
        <src:InVisibilityConverter x:Key="InVisibilityConverter" />
        <src:BooleanConverter x:Key="BooleanConverter" />
        <src:IntegerConverter x:Key="IntegerConverter" />
    </UserControl.Resources>

    <!--
        Descripción:    Diseño para la pantalla Procesar Portafolio (Cálculos Financieros)
        Responsable:    Jorge Peña (Alcuadrado (S.A.)
        Fecha:          21 de Febrero 2014
    -->

    <Telerik:RadBusyIndicator
        x:Name="myBusyIndicator"
        BusyContent="Cargando..."
        DisplayAfter="0"
        IsBusy="{Binding IsBusy}">
        <Grid x:Name="LayoutRoot" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Fila del menu  -->
                <RowDefinition Height="Auto" MinHeight="20" />
                <!--  Fila de la forma/grid  -->
                <RowDefinition Height="Auto" MinHeight="43" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="1" Grid.Column="1">
                <StackPanel>
                    <A2Utils:ControlMenuA2
                        x:Name="cm"
                        DescripcionFiltro="{Binding DescripcionFiltroVM, Mode=TwoWay}"
                        DicBotonesMenu="{Binding DicBotonesMenuVM, Mode=TwoWay}"
                        EstadoMenu="{Binding EstadoMenuVM, Mode=TwoWay}"
                        Filtro="{Binding FiltroVM, Mode=TwoWay}"
                        HayDataForm="False"
                        IsItemValid="True"
                        ItemGridHyperlink="{Binding ItemSeleccionadoHyperlink, Mode=TwoWay}"
                        Mensaje="{Binding MensajeMVVM, Mode=TwoWay}"
                        MensajeError="{Binding ErrorForma}"
                        Modo="{Binding ModoMVVM, Mode=TwoWay}"
                        ObjetoSeleccionado="{Binding EncabezadoSeleccionado}"
                        PreguntarConfirmacion="False"
                        TextoFiltroTooltip="Módulo, operación, duración, tipo producto, tipo inversión"
                        TituloVista="Codificación contable"
                        TituloVistaAdicional="registros"
                        TituloVista_CambioSelected="{Binding EncabezadoSeleccionado.HasChanges}"
                        TituloVista_CantidadRegistros="{Binding ListaEncabezado.Count}" />
                </StackPanel>
            </Border>
            <Grid
                x:Name="grdGridForma"
                Grid.Row="2"
                Grid.Column="1">
                <Border>
                    <!--  ===========================  -->
                    <!--  Grid de navegación paginada  -->
                    <!--  ===========================  -->
                    <StackPanel
                        x:Name="Buscar"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        VerticalAlignment="Top">
                        <Border Style="{StaticResource Contenedor_Paginador}">
                            <A2UTILGEN:A2DataPager
                                x:Name="datapager1"
                                PageSize="10"
                                Source="{Binding Items, ElementName=dg}" />
                        </Border>
                        <A2UTILGEN:A2GridView
                            x:Name="dg"
                            Height="Auto"
                            VerticalAlignment="Top"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding ListaEncabezadoPaginada}"
                            ScrollViewer.VerticalScrollBarVisibility="Visible"
                            SelectedItem="{Binding EncabezadoSeleccionado, Mode=TwoWay}"
                            ValidatesOnDataErrors="None">
                            <A2UTILGEN:A2GridView.Columns>

                                <!--<Telerik:GridViewDataColumn  SortMemberPath="ID codificación contable" Header="ID codificación contable">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource HyperlinkLikeButton}" VerticalAlignment="Center" Content="{Binding intID, Mode=TwoWay}" Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}" CommandParameter="{Binding}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>-->

                                <Telerik:GridViewDataColumn Header="Norma contable" SortMemberPath="Norma contable">
                                    <Telerik:GridViewDataColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.Hyperlink_CambiarAForma, RelativeSource={RelativeSource AncestorType=A2UTILGEN:A2GridView}}"
                                                CommandParameter="{Binding}"
                                                Content="{Binding strDescripcionNormaContable, Mode=TwoWay}"
                                                Style="{StaticResource HyperlinkLikeButton}" />
                                        </DataTemplate>
                                    </Telerik:GridViewDataColumn.CellTemplate>
                                </Telerik:GridViewDataColumn>

                                <!--<Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcionNormaContable}" Header="Norma contable" />-->

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strModulo}" Header="Módulo" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding srtNegocio}" Header="Tópico o negocio" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strOperacion}" Header="Operación" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDuracion}" Header="Duración" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strTipoFecha}" Header="Tipo fecha" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcionTipoProducto}" Header="Tipo producto" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strDescripcionTipoInversion}" Header="Tipo inversión" />

                                <Telerik:GridViewDataColumn DataMemberBinding="{Binding strIdMoneda}" Header="Moneda" />

                            </A2UTILGEN:A2GridView.Columns>
                        </A2UTILGEN:A2GridView>
                    </StackPanel>
                </Border>

                <Border>
                    <Grid>
                        <!--  ====================  -->
                        <!--  Dataform de búsqueda  -->
                        <!--  ====================  -->
                        <A2UTILGEN:A2DataForm
                            x:Name="dfBuscar"
                            VerticalAlignment="Top"
                            AutoGenerateFields="False"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CommandButtonsVisibility="None"
                            CurrentItem="{Binding cb}"
                            Visibility="{Binding visBuscando}">
                            <A2UTILGEN:A2DataForm.EditTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Grid VerticalAlignment="Top">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="10,5,0,10"
                                                Orientation="Vertical">

                                                <Telerik:DataFormDataField Label="Módulo" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="strRetorno"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DataContext.ListaModulo, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedItem="{Binding DataContext.strModuloSeleccionado, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intModulo, Mode=TwoWay}"
                                                        SelectedValuePath="IntId"
                                                        ToolTipService.ToolTip="Modulo" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField Label="Tópico o negocio" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="strRetorno"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DataContext.ListaInformacionModuloBusqueda[Negocio], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intNegocio, Mode=TwoWay}"
                                                        SelectedValuePath="IntId"
                                                        ToolTipService.ToolTip="Tópico o negocio" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField Label="Operación" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="strRetorno"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DataContext.ListaInformacionModuloBusqueda[Operacion], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intOperacion, Mode=TwoWay}"
                                                        SelectedValuePath="IntId"
                                                        ToolTipService.ToolTip="Operación" />
                                                </Telerik:DataFormDataField>

                                            </StackPanel>


                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="10,5,0,10"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">

                                                <Telerik:DataFormDataField Label="Duración" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="strRetorno"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DataContext.ListaInformacionModuloBusqueda[DuracionDias], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intDuracion, Mode=TwoWay}"
                                                        SelectedValuePath="IntId"
                                                        ToolTipService.ToolTip="Duración" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField Label="Tipo fecha" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="strRetorno"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DataContext.ListaInformacionModuloBusqueda[TipoFecha], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        SelectedValue="{Binding intTipoFecha, Mode=TwoWay}"
                                                        SelectedValuePath="IntId"
                                                        ToolTipService.ToolTip="Tipo Fecha" />
                                                </Telerik:DataFormDataField>

                                                <Telerik:DataFormDataField Label="Tipo producto" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="Descripcion"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DiccionarioCombos[TIPOPRODUCTO_COD_CONT], Source={StaticResource A2VM}}"
                                                        SelectedValue="{Binding intTipoProducto, StringFormat='#', Mode=TwoWay}"
                                                        SelectedValuePath="ID"
                                                        ToolTipService.ToolTip="Tipo producto" />
                                                </Telerik:DataFormDataField>

                                            </StackPanel>


                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="4"
                                                Margin="10,5,0,10"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">

                                                <Telerik:DataFormDataField Label="Tipo inversión" LabelPosition="Above">
                                                    <ComboBox
                                                        DisplayMemberPath="Descripcion"
                                                        GotFocus="seleccionarFocoControl"
                                                        ItemsSource="{Binding DiccionarioCombos[TIPOINVERSION_COD_CONT], Source={StaticResource A2VM}}"
                                                        SelectedValue="{Binding strTipoInversion, Mode=TwoWay}"
                                                        SelectedValuePath="ID"
                                                        ToolTipService.ToolTip="Tipo inversión" />
                                                </Telerik:DataFormDataField>

                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </A2UTILGEN:A2DataForm.EditTemplate>
                        </A2UTILGEN:A2DataForm>

                        <StackPanel
                            x:Name="Editar"
                            Grid.Row="1"
                            Grid.Column="1"
                            Height="Auto"
                            Visibility="{Binding visNavegando}">
                            <!--  ============================  -->
                            <!--  Dataform edición de registro  -->
                            <!--  ============================  -->
                            <Border>
                                <Grid
                                    Height="242"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Top"
                                    DataContext="{Binding EncabezadoSeleccionado}">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Telerik:DataFormDataField
                                        IsEnabled="{Binding DataContext.HabilitarEncabezadoNormaContable, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Label="Norma contable"
                                        LabelPosition="Above">
                                        <ComboBox
                                            DisplayMemberPath="Descripcion"
                                            GotFocus="seleccionarFocoControl"
                                            ItemsSource="{Binding DiccionarioCombos[NORMASCONTABLES], Source={StaticResource A2VM}}"
                                            SelectedValue="{Binding strNormaContable, Mode=TwoWay}"
                                            SelectedValuePath="ID"
                                            ToolTipService.ToolTip="Norma contable" />
                                    </Telerik:DataFormDataField>

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Orientation="Vertical">

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Módulo"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="strRetorno"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DataContext.ListaModulo, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedItem="{Binding DataContext.strModuloSeleccionado, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding intModulo, Mode=TwoWay}"
                                                SelectedValuePath="IntId"
                                                ToolTipService.ToolTip="Modulo" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Tópico o negocio"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="strRetorno"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DataContext.ListaInformacionModulo[Negocio], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding intNegocio, Mode=TwoWay}"
                                                SelectedValuePath="IntId"
                                                ToolTipService.ToolTip="Tópico o negocio" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Operación"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="strRetorno"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DataContext.ListaInformacionModulo[Operacion], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding intOperacion, Mode=TwoWay}"
                                                SelectedValuePath="IntId"
                                                ToolTipService.ToolTip="Operación" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Duración"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="strRetorno"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DataContext.ListaInformacionModulo[DuracionDias], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding intDuracion, Mode=TwoWay}"
                                                SelectedValuePath="IntId"
                                                ToolTipService.ToolTip="Duración" />
                                        </Telerik:DataFormDataField>

                                    </StackPanel>


                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        VerticalAlignment="Top"
                                        Orientation="Vertical">

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Tipo fecha"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="strRetorno"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DataContext.ListaInformacionModulo[TipoFecha], Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                SelectedValue="{Binding intTipoFecha, Mode=TwoWay}"
                                                SelectedValuePath="IntId"
                                                ToolTipService.ToolTip="Tipo Fecha" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Tipo producto"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DiccionarioCombos[TIPOPRODUCTO_COD_CONT], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding intTipoProducto, StringFormat='#', Mode=TwoWay}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Tipo producto" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Tipo inversión"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DiccionarioCombos[TIPOINVERSION_COD_CONT], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding strTipoInversion, Mode=TwoWay}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Tipo inversión" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Moneda"
                                            LabelPosition="Above">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DiccionarioCombos[CodificacionContableMonedas], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding lngIdMoneda, StringFormat='#', Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Moneda" />
                                        </Telerik:DataFormDataField>

                                    </StackPanel>


                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="4"
                                        VerticalAlignment="Top"
                                        Orientation="Vertical">

                                        <Telerik:DataFormDataField
                                            Margin="10,5,0,0"
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Fecha inicio"
                                            LabelPosition="Above">
                                            <A2UTILGEN:A2DatePicker
                                                GotFocus="seleccionarFocoControl"
                                                SelectedDate="{Binding dtmFechaInicio, StringFormat='dd/MMM/yyyy', Mode=TwoWay}"
                                                ToolTipService.ToolTip="Fecha inicio" />
                                        </Telerik:DataFormDataField>

                                        <Telerik:DataFormDataField
                                            Margin="10,3,0,0"
                                            IsEnabled="{Binding DataContext.HabilitarEncabezado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Label="Activo/Inactivo"
                                            LabelPosition="Above"
                                            Visibility="{Binding DataContext.VisibilidadActividad, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                            <ComboBox
                                                DisplayMemberPath="Descripcion"
                                                GotFocus="seleccionarFocoControl"
                                                ItemsSource="{Binding DiccionarioCombos[CodificacionContableActividad], Source={StaticResource A2VM}}"
                                                SelectedValue="{Binding logActivo, StringFormat='#', Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                SelectedValuePath="ID"
                                                ToolTipService.ToolTip="Activo/Inactivo" />
                                        </Telerik:DataFormDataField>

                                    </StackPanel>
                                </Grid>
                            </Border>



                            <Border Margin="0,10,0,0" Style="{StaticResource Contenedor_TabControl}">
                                <TabControl>
                                    <TabItem Header="Detalle">
                                        <StackPanel>
                                            <A2Utils:ControlMenuDetalleA2
                                                x:Name="cmCodificacion"
                                                IsEnabled="{Binding DataContext.Editando, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Mensaje="{Binding DataContext.MensajeMVVM, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                NombreDetalle="{Binding DataContext.NombreColeccionDetalle, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                ObjetoSeleccionado="{Binding DataContext.DetalleSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                PreguntarConfirmacion="True" />
                                            <Border Style="{StaticResource Contenedor_Paginador}">
                                                <A2UTILGEN:A2DataPager
                                                    x:Name="datapager2"
                                                    PageSize="10"
                                                    Source="{Binding Items, ElementName=dgDetalle}" />
                                            </Border>
                                            <A2UTILGEN:A2GridView
                                                x:Name="dgDetalle"
                                                Height="150"
                                                VerticalAlignment="Top"
                                                AutoGenerateColumns="False"
                                                IsReadOnly="{Binding DataContext.EditandoDetalle, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                ItemsSource="{Binding DataContext.ListaDetallePaginada, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                SelectedItem="{Binding DataContext.DetalleSeleccionado, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                                ValidatesOnDataErrors="None">
                                                <A2UTILGEN:A2GridView.Columns>

                                                    <Telerik:GridViewDataColumn Header="Valor">
                                                        <Telerik:GridViewDataColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <!--<Border HorizontalAlignment="Center" VerticalAlignment="Center">-->
                                                                <!--<StackPanel Orientation="Horizontal">-->
                                                                <ComboBox
                                                                    MinWidth="80"
                                                                    Background="Transparent"
                                                                    DisplayMemberPath="strDescripcion"
                                                                    DropDownClosed="ComboBox_DropDownClosedValor"
                                                                    IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    ItemsSource="{Binding DataContext.ListaComboValor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    SelectedValue="{Binding strValor, StringFormat='#', Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                    SelectedValuePath="strRetorno" />
                                                                <!--</StackPanel>-->
                                                                <!--</Border>-->
                                                            </DataTemplate>
                                                        </Telerik:GridViewDataColumn.CellTemplate>
                                                    </Telerik:GridViewDataColumn>

                                                    <Telerik:GridViewDataColumn Width="25">
                                                        <Telerik:GridViewDataColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button
                                                                    x:Name="btnValorTotalizado"
                                                                    Margin="0,5,0,5"
                                                                    Click="btnVerTotalizados_Click"
                                                                    Style="{StaticResource btnBuscar}"
                                                                    ToolTipService.ToolTip="Presione para visualizar los campos totalizados"
                                                                    Visibility="{Binding DataContext.VisibilidadBtnValorTotalizado, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                            </DataTemplate>
                                                        </Telerik:GridViewDataColumn.CellTemplate>
                                                    </Telerik:GridViewDataColumn>

                                                    <Telerik:GridViewDataColumn Header="Nit">
                                                        <Telerik:GridViewDataColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    <ComboBox
                                                                        MinWidth="100"
                                                                        Background="Transparent"
                                                                        DisplayMemberPath="Descripcion"
                                                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        ItemsSource="{Binding DiccionarioCombos[NITCODIFICACION], Source={StaticResource A2VM}}"
                                                                        SelectedValue="{Binding strNIT, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                        SelectedValuePath="ID" />
                                                                </Border>
                                                            </DataTemplate>
                                                        </Telerik:GridViewDataColumn.CellTemplate>
                                                    </Telerik:GridViewDataColumn>

                                                    <Telerik:GridViewDataColumn Header="Concepto cta. contable">
                                                        <Telerik:GridViewDataColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                    <ComboBox
                                                                        MinWidth="150"
                                                                        Background="Transparent"
                                                                        DisplayMemberPath="Descripcion"
                                                                        IsEnabled="{Binding DataContext.Editando, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        ItemsSource="{Binding DiccionarioCombos[CodificacionContableConceptos], Source={StaticResource A2VM}}"
                                                                        SelectedValue="{Binding strCtaContable, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"
                                                                        SelectedValuePath="ID" />

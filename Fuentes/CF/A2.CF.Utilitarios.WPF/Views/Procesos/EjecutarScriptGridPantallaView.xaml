                                    FontWeight="Bold"
                                    Text="Parametro 35"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro36"
                                    Grid.Row="3"
                                    Grid.Column="5"
                                    Margin="5"
                                    Text="Parametro 36"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro37"
                                    Grid.Row="3"
                                    Grid.Column="6"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"
                                    Text="Parametro 37"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro38"
                                    Grid.Row="3"
                                    Grid.Column="7"
                                    Margin="5"

                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro39"
                                    Grid.Row="3"
                                    Grid.Column="8"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"

                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro22"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="5"
                                    Text="Parametro 22"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro23"
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"
                                    Text="Parametro 23"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro24"
                                    Grid.Row="2"
                                    Grid.Column="3"
                                    Margin="5"
                                    Text="Parametro 24"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro25"
                                    Grid.Row="2"

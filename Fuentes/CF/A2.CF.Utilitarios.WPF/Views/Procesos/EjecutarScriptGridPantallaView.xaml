                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="5"
                                    Text="Parametro 14"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro15"
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"
                                    Text="Parametro 15"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro16"
                                    Grid.Row="1"
                                    Grid.Column="5"
                                    Margin="5"
                                    Text="Parametro 16"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro17"
                                    Grid.Row="1"
                                    Grid.Column="6"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"
                                    Text="Parametro 17"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro18"
                                    Grid.Row="1"
                                    Grid.Column="7"
                                    Margin="5"
                                    Text="Parametro 18"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro19"
                                    Grid.Row="1"
                                    Grid.Column="8"
                                    Margin="5"
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"
                                    Text="Parametro 19"
                                    Visibility="Collapsed" />
                                <TextBlock
                                    x:Name="txtParametro20"
                                    Grid.Row="1"
                                    Grid.Column="9"
                                    Margin="5"
